  LambdaReplicatorRole:
    Type: AWS::IAM::ServiceLinkedRole
    Properties: 
      AWSServiceName: replicator.lambda.amazonaws.com
  CloudfrontLoggerRole:
    Type: AWS::IAM::ServiceLinkedRole
    Properties: 
      AWSServiceName: logger.cloudfront.amazonaws.com
