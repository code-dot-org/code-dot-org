  # Browser Event Logs Log Group and Log Stream
  BrowserEventLogs:
    Type: AWS::Logs::LogGroup
    Properties:
      # Use stack name on adhocs so that log groups are unique per adhoc stack.
      LogGroupName: "<%=rack_env?(:adhoc) ? stack_name : environment%>-browser-events"

  BrowserEventLogsStream:
    Type: AWS::Logs::LogStream
    Properties:
      LogGroupName: !Ref BrowserEventLogs
      LogStreamName: "<%=rack_env?(:adhoc) ? stack_name : environment%>"
