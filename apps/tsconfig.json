// This tsconfig is used by your code editor, such as VS Code. 
// It extends tsconfig.build.json, used for building apps.
{
  "extends": "./tsconfig.build.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    // For IDEs, include js and jsx. This allows Intellisense to
    // detect js and jsx files for imports.
    "./src/**/*.js",
    "./src/**/*.jsx",
  ],
}
