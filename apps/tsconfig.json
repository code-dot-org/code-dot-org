{
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.jsx"],
  "compilerOptions": {
    "jsx": "react",    
    "target": "es6",
    "lib": ["ES2019", "DOM"],
    "module": "es6",
    "rootDir": "./",
    "moduleResolution": "node16",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@cdo/apps/*": ["./src/*"]
    }
  }
}
