<%
var i18n = require('./locale');

/**
 * Causes helpful controls to appear that provide ways to manually change/break
 * the simulation, for help repro-ing bugs.
 * Don't check this in set to TRUE!
 * @type {boolean}
 * @const
 */
var ENABLE_DEBUG_CONTROLS = false;
%>
<div class="content-wrap">
  <% if (remoteNodeName) { %>
  <p>Connected to <%= remoteNodeName %></p>
  <% } %>

  <% if (myHostname) { %>
  <p>My hostname: <%= myHostname %></p>
  <% } %>

  <% if (myAddress) { %>
  <p>My address: <%= myAddress %></p>
  <% } %>

  <% if (shareLink) { %>
  <p><a href="<%= shareLink %>"><%= i18n.shareThisNetwork() %></a></p>
  <% } %>

  <% if (ENABLE_DEBUG_CONTROLS) { %>
    <input type="button" class="debug-button expire-heartbeat" value="Expire Heartbeat" title="Make local node look expired" />
    <input type="button" class="debug-button clean-shard-now" value="Clean Shard Now" title="Manuallly start a cleaning cycle from this client" />
  <% } %>
</div>
