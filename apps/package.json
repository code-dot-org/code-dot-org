{
  "name": "@cdo/apps-build",
  "version": "0.0.1",
  "description": "Code Studio module package build/test harness",
  "private": true,
  "config": {
    "output": "./build/package/",
    "stylesheets": [
      "./style/*.scss"
    ],
    "media": [
      "./static/**/*",
      "./lib/blockly/media/**/*"
    ],
    "port": "8000",
    "apps": [
      "maze",
      "turtle",
      "bounce",
      "flappy",
      "studio",
      "jigsaw",
      "calc",
      "applab",
      "eval",
      "netsim"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./build",
    "build": "gulp build",
    "buildcore": "./build_with_core.sh",
    "deploy": "./deploy.sh",
    "unpack": "./unpack.sh",
    "start": "gulp dev & node server.js",
    "lint": "jshint --reporter node_modules/jshint-stylish/stylish .",
    "test": "npm run lint && node ./test/util/runTests.js",
    "mochaTest": "node ./test/util/runTests.js"
  },
  "browserify": {
    "transform": [
      "require-globify",
      "browserify-shim"
    ]
  },
  "browser": {
    "blockly": "./build/package/js/blockly.js",
    "blockly_locale": "./build/package/js/en_us/blockly_locale.js",
    "locale": "./locale.js"
  },
  "browserify-shim": {
    "blockly": {
      "exports": "Blockly"
    }
  },
  "dependencies": {
    "@cdo/apps": "0.0.1",
    "@cdo/cdo": "0.0.1",
    "browserify": "^9.0.7",
    "browserify-shim": "^3.8.3",
    "gulp": "^3.8.11",
    "gulp-concat": "^2.5.2",
    "messageformat": "^0.2.2",
    "partition-bundle": "^1.1.0"
  },
  "devDependencies": {
    "chai": "~1.10.0",
    "connect-livereload": "~0.5.2",
    "ejs": "^2.3.1",
    "express": "~4.11.0",
    "gaze": "^0.5.1",
    "jshint": "^2.6.3",
    "jshint-stylish": "^1.0.1",
    "mocha": "^2.2.1",
    "mochify": "^2.6.1",
    "npm-which": "^2.0.0",
    "phantomjs": "git://github.com/wjordan/phantomjs",
    "require-globify": "^1.1.0",
    "tiny-lr": "^0.1.5"
  }
}
