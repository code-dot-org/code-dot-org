- responsive ||= false

-# Some programatically-generated styling to accompany that in course-explorer.scss.

- (1..13).each do |n|
  :css
    .courses .bar-#{n} {
      float: left;
      width: #{n * 74.5}px;
    }

- (0..12).each do |n|
  :css
    .smallresponsive .arrow-offset-#{n}:after {
      left: 34px;
    }

    .arrow-offset-#{n}:after {
      left: #{n * 74.5 + 34}px;
    }

- (0..4).each do |n|
  :css
    .tools-arrow-offset-#{n}:after {
      left: #{n * 140 + 60}px;
    }

-# Sometimes there's a responsive alternative, and sometimes there isn't.

- if responsive
  :css
    @media screen and (min-width: 992px)
    {
      .courseexplorer.smallresponsive {
        display: none !important;
      }
    }

    @media screen and (max-width: 991px)
    {
      .courseexplorer.nonresponsive {
        display: none !important;
      }
    }

