#!/bin/bash

LOG_HOME="$HOME/log/snapshots"
mkdir -p "$LOG_HOME"

if [ "$1" == "last" ]; then
  ls -1tr "$LOG_HOME"/* | tail -1 | xargs less

elif [ "$1" == "list" ]; then
  ls -lhtr "$LOG_HOME"/*

else
  log="$LOG_HOME/$(date -d @$((($(date -u +%s)/300)*300)) -u +snapshot.%H.%M)"
  echo "Snapshot: $(date -u) on $(hostname)" > "$log"

  echo "--------------------------------------------------------------------------------" >> "$log"
  free -mh >> "$log"

  echo "--------------------------------------------------------------------------------" >> "$log"
  top -c -b -n 5 >> "$log"

fi
