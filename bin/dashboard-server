#!/usr/bin/env ruby
require_relative '../deployment'

def main()
  if CDO.dashboard_enable_pegasus
    rerun = "rerun -p '**/*.{rb,ru,yml}' -b -d'#{deploy_dir('lib')},#{deploy_dir('shared/middleware')},#{pegasus_dir}'"
  else
    rerun = ''
  end

  Dir.chdir(dashboard_dir) do
    system "RAILS_ENV=#{CDO.rack_env} bundle exec #{rerun} rails s -p #{CDO.dashboard_port}"
  end
end

main
