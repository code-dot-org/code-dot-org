#pageheader
  .content{:style=>"overflow:visible"}
    #left
      %a{:href=>"/"}
        %img#logo-tr{:src=>'/images/logo.png'}

    #right
      %a{:href=>"http://facebook.com/Code.org", :title=>'Facebook', :target=>"_blank", :style=>"text-decoration:none"}
        %img{:src=>"/images/facebook_purple.png"}
      %a{:href=>"http://twitter.com/codeorg", :title=>'Twitter', :target=>"_blank", :style=>"text-decoration:none"}
        %img{:src=>"/images/twitter_purple.png"}
      %a{:href=>"https://medium.com/@codeorg", :title=>'Tumblr', :target=>"_blank", :style=>"text-decoration:none"}
        %img{:src=>"/images/tumblr_purple.png"}
      %a{:href=>"https://www.instagram.com/codeorg", :title=>'Instagram', :target=>"_blank", :style=>"text-decoration:none"}
        %img{:src=>"/images/instagram_purple.png"}
      %a{:href=>"https://store.code.org", :title=>'Shop', :target=>"_blank", :style=>"text-decoration:none"}
        %img{:src=>"/images/shirt_purple.png"}
      %a{:href=>"//code.org/donate", :title=>'Donate', :style=>"text-decoration:none"}
        %img{:src=>"/images/donate_normal.png"}
