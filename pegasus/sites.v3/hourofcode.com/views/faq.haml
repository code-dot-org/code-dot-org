%h1= hoc_s(:hoc_faq_title)
-if @country == 'uk'
  %h2#about= hoc_s(:hoc_faq_what_is_hoc_q)
  %div= hoc_s(:hoc_faq_what_is_hoc_uk_a)

  %br/
  %a{href: "http://uk.code.org/learn", target: "_blank"}
    %button
      =hoc_s(:hoc_faq_last_year)
      
  %h2= hoc_s(:hoc_faq_when_is_hoc_q)
  %div= hoc_s(:hoc_faq_when_is_hoc_uk_a)

  %h2= hoc_s(:hoc_faq_why_cs_q)
  %div= hoc_s(:hoc_faq_why_cs_uk_a)

  %h2= hoc_s(:hoc_faq_how_participate_q)
  %div= hoc_s(:hoc_faq_how_participate_uk_a)

  %h2= hoc_s(:hoc_faq_behind_hoc_q)
  %div= hoc_s(:hoc_faq_behind_hoc_uk_a)

  %h2= hoc_s(:hoc_faq_host_q)
  %div= hoc_s(:hoc_faq_host_uk_a).gsub(/target-resources-how-to/, hoc_uri('/resources/how-to'))

  %h2= hoc_s(:hoc_faq_need_computers_q)
  %div= hoc_s(:hoc_faq_need_computers_a)

  %h2= hoc_s(:hoc_faq_tutorial_q)
  %div= hoc_s(:hoc_faq_tutorial_a).gsub(/target-tutorial-guidelines/, hoc_uri('/tutorial-guidelines'))

-else 
  %h2#about= hoc_s(:hoc_faq_what_is_hoc_q)
  %div= hoc_s(:hoc_faq_what_is_hoc_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %br/
  %a{href: "http://#{codeorg_url()}/learn", target: "_blank"}
    %button
      =hoc_s(:hoc_faq_last_year)

  %h2= hoc_s(:hoc_faq_when_is_hoc_q)
  %div= hoc_s(:hoc_faq_when_is_hoc_a)

  %h2= hoc_s(:hoc_faq_why_cs_q)
  %div= hoc_s(:hoc_faq_why_cs_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  -if @country == 'ie'
    %h2 I am in Ireland. How do I participate?
    %div Anyone can organise an Hour of Code event in Ireland. Find out more <a href="#{hoc_uri('/resources')}">here</a>.

  %h2= hoc_s(:hoc_faq_how_participate_q)
  %div= hoc_s(:hoc_faq_how_participate_a).gsub(/target-resources-how-to/, hoc_uri('/resources/how-to'))

  -if @country == 'ro'
    %h2 Ma mai pot preinregistra la Hour of Code?
    %div= "Formularul de preinregistre la Hour of Code este acum inchis. Puteti participa in continuare oricand va rugam sa consultati sectiunea <a href='#{hoc_uri('/resources')}'>RESURSE</a>."

  %h2= hoc_s(:hoc_faq_behind_hoc_q)
  %div= hoc_s(:hoc_faq_behind_hoc_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %h2= hoc_s(:hoc_faq_host_q)
  %div= hoc_s(:hoc_faq_host_a).gsub(/target-resources-how-to/, hoc_uri('/resources/how-to')).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %h2= hoc_s(:hoc_faq_need_computers_q)
  %div= hoc_s(:hoc_faq_need_computers_a)

  -if @country != 'us' && @country != 'ie'
    %h2= hoc_s(:hoc_faq_international_q).gsub(/<country>/, HOC_COUNTRIES[@country]['full_name'])
    %div= hoc_s(:hoc_faq_international_a).gsub(/target-resources/, hoc_uri('/resources'))

  %h2= hoc_s(:hoc_faq_tutorial_q)
  %div= hoc_s(:hoc_faq_tutorial_a).gsub(/target-tutorial-guidelines/, hoc_uri('/tutorial-guidelines'))

  %h2= hoc_s(:hoc_faq_account_q)
  %div= hoc_s(:hoc_faq_account_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %h2= hoc_s(:hoc_faq_frozen_q)
  %div= hoc_s(:hoc_faq_frozen_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %h2= hoc_s(:hoc_faq_high_school_q)
  %div= hoc_s(:hoc_faq_high_school_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

  %h2= hoc_s(:hoc_faq_scratch_q)
  %div= hoc_s(:hoc_faq_scratch_a).gsub(/http:\/\/code.org/, "http://#{codeorg_url()}")

-if @country == 'br'
  %h2= hoc_s(:hoc_faq_more_questions_br_q)
  %div= hoc_s(:hoc_faq_more_questions_br_a)

-if @country == 'ro'
  %h2 Daca aveti intrebari sau aveti nevoie de suport contactati echipa Hour of Code la adresa support@adfaber.org