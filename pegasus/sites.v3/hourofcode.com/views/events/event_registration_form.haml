    figure {
      width: 100%;
      background: var(--neutral_white);
      border: 1px solid var(--neutral_dark20);
      padding: 1rem 1rem 0.5rem;

      @media (max-width: 640px) {
        iframe {
          height: 560px;
        }
      }
