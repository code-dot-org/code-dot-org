:ruby
  steps_educators_index = 7

  steps_educators_heading = [
    hoc_s(:hoc_how_to_step_label_volunteer_decide),
    hoc_s(:hoc_how_to_step_label_register_event),
    hoc_s(:hoc_how_to_step_label_plan_classroom_visit),
    hoc_s(:hoc_how_to_step_label_help_spread_word),
    hoc_s(:hoc_how_to_step_label_get_coding),
    hoc_s(:hoc_how_to_step_label_celebrate),
    hoc_s(:hoc_how_to_step_label_beyond_hoc)
  ]

  steps_educators_desc = [
    hoc_s(:hoc_how_to_step_volunteer_decide_desc_01),
    hoc_s(:hoc_how_to_step_volunteer_register_desc_01),
    hoc_s(:hoc_how_to_step_volunteer_plan_desc_01),
    hoc_s(:hoc_how_to_step_volunteer_spread_word_desc_01),
    hoc_s(:hoc_how_to_step_volunteer_get_coding_desc_01),
    hoc_s(:hoc_how_to_step_educators_celebrate_desc),
    hoc_s(:hoc_how_to_step_volunteer_beyond_desc_01)
  ]

%section.steps
  .wrapper

    = view :"how-to/steps/side-nav/side_nav_volunteers"

    %div.steps-wrapper
      - steps_educators_index.times do |index|
        .step{id: "step-0#{index + 1}", class:"#{'divider-accent' if index === 0 || index === 4 || index === 6}"}
          .step-counter
            %span
              = index + 1
          .step-content
            %h3.heading-xl
              = steps_educators_heading[index]
            %p
              = steps_educators_desc[index]

            -# Step 1 additional content
            - if index === 0
              %p.tag
                =hoc_s(:before_hoc)
              %ul
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_decide_list_01, markdown: :inline, locals:{email_url: resolve_url("/promote/resources")})
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_decide_list_02, markdown: :inline, locals:{companies_url: resolve_url("/how-to/companies")})
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_decide_list_03, markdown: :inline, locals:{map_url: "http://code.org/volunteer/local"})
              %a.link-button{href: "https://code.org/volunteer"}
                =hoc_s(:call_to_action_sign_up_to_volunteer)

            -# Step 2 additional content
            - if index === 1
              %p
                =hoc_s(:hoc_how_to_step_events_register_desc_02, markdown: :inline, locals:{map_url: resolve_url("/map")})
              %a.link-button{href: resolve_url("/events")}
                =hoc_s(:call_to_action_register_event)

            -# Step 3 additional content
            - if index === 2
              %ul
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_plan_list_01)
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_plan_list_02)
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_plan_list_03)
                %li
                  =hoc_s(:hoc_how_to_step_volunteer_plan_list_04)
              .button-wrapper
                %a.link-button{href: resolve_url("/learn")}
                  =hoc_s(:call_to_action_select_coding_activity)
                %a.link-button.secondary{href: resolve_url("/ai")}
                  =hoc_s(:call_to_action_learn_about_ai)

            -# Step 4 additional content
            - if index === 3
              %a.link-button{href: resolve_url("/promote/resources#social")}
                =hoc_s(:call_to_action_share_on_social_media)

            -# Step 5 additional content
            - if index === 4
              %p.tag
                =hoc_s(:day_of_hoc)
              %p
                =hoc_s(:hoc_how_to_step_volunteer_get_coding_desc_02)
              %img{src: "/images/fit-600/Marketing/HoC-2015-ACE-HS--42.jpg", alt: ""}

            -# Step 6 additional content
            - if index === 5
              %a.link-button{href: "https://code.org/certificates"}
                =hoc_s(:call_to_action_print_certificates)

            -# Step 7 additional content
            - if index === 6
              %p.tag
                =hoc_s(:after_hoc)
              %p
                =hoc_s(:hoc_how_to_step_volunteer_beyond_desc_02, markdown: :inline, locals:{teals_url: "https://www.microsoft.com/en-us/teals"})
              %a.link-button{href: "https://advocacy.code.org/"}
                =hoc_s(:call_to_action_become_an_advocate)
