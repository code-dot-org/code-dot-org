:ruby
  steps_educators_index = 8

  steps_educators_heading = [
    hoc_s(:hoc_how_to_step_label_connect_with_school),
    hoc_s(:hoc_how_to_step_label_register_event),
    hoc_s(:hoc_how_to_step_label_choose_activities),
    hoc_s(:hoc_how_to_step_label_plan_your_event),
    hoc_s(:hoc_how_to_step_label_plan_your_hour),
    hoc_s(:hoc_how_to_step_label_get_coding),
    hoc_s(:hoc_how_to_step_label_celebrate),
    hoc_s(:hoc_how_to_step_label_beyond_hoc)
  ]

  steps_educators_desc = [
    hoc_s(:hoc_how_to_step_companies_connect_desc_01),
    hoc_s(:hoc_how_to_step_companies_register_desc_01),
    hoc_s(:hoc_how_to_step_choose_activities_desc_01),
    hoc_s(:hoc_how_to_step_companies_plan_event_desc_01, markdown: :inline, locals:{virtual_url: resolve_url("/how-to/virtual")}),
    hoc_s(:hoc_how_to_step_plan_hour_desc_01),
    hoc_s(:hoc_how_to_step_companies_get_coding_desc_01),
    hoc_s(:hoc_how_to_step_educators_celebrate_desc),
    hoc_s(:hoc_how_to_step_beyond_hoc_subhead)
  ]

%section.steps
  .wrapper
    = view :"how-to/steps/side-nav/side_nav_companies"
    %div.steps-wrapper
      - steps_educators_index.times do |index|
        .step{id: "step-0#{index + 1}", class:"#{'divider-accent' if index === 0 || index === 5 || index === 7}"}
          .step-counter
            %span
              = index + 1
          .step-content
            %h3.heading-xl
              = steps_educators_heading[index]
            %p
              = steps_educators_desc[index]

            -# Step 1 additional content
            - if index === 0
              %p.tag.day-of
                =hoc_s(:before_hoc)
              %p=hoc_s(:hoc_how_to_step_companies_connect_desc_02)
              %ul
                %li=hoc_s(:hoc_how_to_step_companies_connect_desc_03)
                %li=hoc_s(:hoc_how_to_step_companies_connect_desc_04)

            -# Step 2 additional content
            - if index === 1
              %p=hoc_s(:hoc_how_to_step_companies_register_desc_02)
              %a.link-button{href: resolve_url("/events")}
                =hoc_s(:call_to_action_register_event)

            -# Step 3 additional content
            - if index === 2
              %p
                =hoc_s(:hoc_how_to_step_choose_activities_desc_02, markdown: :inline, locals:{activities_url: resolve_url("/learn"), ai_activities_url: resolve_url("/learn?subject=ai")})
              %p
                =hoc_s(:hoc_how_to_step_choose_activities_desc_03, markdown: :inline, locals:{ai_url: resolve_url("/ai")})
              %img{src: "/images/activites_2023.jpg", alt: ""}
              .button-wrapper
                %a.link-button{href: resolve_url("/learn")}
                  =hoc_s(:call_to_action_select_coding_activity)
                %a.link-button.secondary{href: resolve_url("/ai")}
                  =hoc_s(:call_to_action_learn_about_ai)

            -# Step 4 additional content
            - if index === 3
              %p
                =hoc_s(:hoc_how_to_step_companies_plan_event_desc_02)
              %p
                =hoc_s(:hoc_how_to_step_companies_plan_event_desc_03, markdown: :inline, locals:{corporate_url: "https://medium.com/@codeorg/amazon-microsoft-google-vista-and-more-rally-to-bring-the-hour-of-code-to-students-worldwide-4641325542cf", donors_url: "https://medium.com/@codeorg/how-code-orgs-corporate-supporters-helped-spread-the-love-for-2019-s-hour-of-code-73a3c088f10f"})

            -# Step 5 additional content
            - if index === 4
              %ul
                %li
                  =hoc_s(:hoc_how_to_step_companies_plan_hour_desc_02, markdown: :inline, locals: {video_url: resolve_url("/promote/resources#videos")})
                %li
                  =hoc_s(:hoc_how_to_step_companies_plan_hour_desc_03)
                %li
                  =hoc_s(:hoc_how_to_step_companies_plan_hour_desc_04)
                %li
                  =hoc_s(:hoc_how_to_step_companies_plan_hour_desc_05)

            -# Step 6 additional content
            - if index === 5
              %p.tag.day-of
                =hoc_s(:day_of_hoc)
              %a.link-button{href: resolve_url("/learn")}
                =hoc_s(:call_to_action_start_activity)
              %img{src: "/images/group_ipad.jpg", alt: "", style: "margin-top: 1rem"}

            -# Step 7 additional content
            - if index === 6
              %a.link-button{href: "https://code.org/certificates"}
                =hoc_s(:call_to_action_print_certificates)

            -# Step 8 additional content
            - if index === 7
              %p.tag.day-of
                =hoc_s(:after_hoc)
              %p
                =hoc_s(:hoc_how_to_step_companies_beyond_desc_01)
              %a.link-button{href: resolve_url("/beyond")}
                =hoc_s(:call_to_action_go_beyond_hoc)
