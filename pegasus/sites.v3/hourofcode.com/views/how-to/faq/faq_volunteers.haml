- faq_educators_index = 3

- faq_eduactors_question = [hoc_s(:hoc_how_to_faq_question_volunteer_teacher_contact), hoc_s(:hoc_how_to_faq_question_classroom_visit), hoc_s(:hoc_how_to_faq_question_age_groups)]

- faq_educators_answer = [hoc_s(:hoc_how_to_faq_answer_volunteer_teacher_contact), hoc_s(:hoc_how_to_faq_answer_classroom_visit), hoc_s(:hoc_how_to_faq_answer_age_groups)]

%section.faq.bg-neutral-light
  .wrapper
    .flex-container
      %h2
        =hoc_s(:heading_faq)
      %a.link-button.secondary{href: resolve_url("/faq")}
        =hoc_s(:call_to_action_view_faqs)
    - faq_educators_index.times do |index|
      %details
        %summary
          = faq_eduactors_question[index]
        %p
          = faq_educators_answer[index]
