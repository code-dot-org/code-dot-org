-current_url = request.path_info
%ul
  -{ hoc_s(:events_nav_all)=>resolve_url('/events/all'), hoc_s(:events_nav_whole_schools)=>resolve_url('/events/schools')}.each_pair do |label,url|
    - if current_url == url
      %li
        %span{style: "font-weight: bold; color: #ff8a00;"}= label
    -else
      %li
        %a{:href=>url}= label
