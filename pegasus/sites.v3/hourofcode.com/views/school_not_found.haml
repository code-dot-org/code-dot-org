#schoolnotfound
  %label= hoc_s(:school_not_found_heading)

  .form-group
    %label.control-label{for: "school-name"}= hoc_s(:school_name)
    %div
      %input#hoc-school-name.form-control{name: "school_name_s", type: "text", required: true}/

  .form-group
    %label.control-label{for: "school-city"}= hoc_s(:school_city)
    %div
      %input#hoc-school-city.form-control{name: "school_city_s", type: "text", required: true}/

  %state-zip-box{style: "display: inline-block; width: 500px"}
    .form-group{style: "width: 100px; float: left; margin-right: 20px;"}
      %label.control-label{for: "school-state"}= hoc_s(:school_state)
      %div
        %input#hoc-school-state.form-control{name: "school_state_s", type: "text", required: true, style: "width: 100px"}/

    .form-group{style: "width: 200px; float: left;"}
      %label.control-label{for: "school-zip"}= hoc_s(:school_zip)
      %div
        %input#hoc-school-zip.form-control{name: "school_zip_s", type: "text", style: "width: 200px"}/
