#joindescription
  #calltoaction.row.hidden-xs
    .col-xs-12{style: "text-align: left; font-size: 18px; line-height:30px; font-weight: 500; color: rgb(26,172,186)"}
      %p
        -if @country == 'uk'
          =hoc_s(:front_join_us_header_uk)
        -else
          =hoc_s(:front_join_us_header)

  #calltoaction.row.hidden-xs
    .col-xs-12{style: "text-align: left; font-size: 16px; line-height:30px; font-weight: 400; padding-left:3em"}
      %p
        %b=hoc_s(:front_join_us_teacher)
        =hoc_s(:front_join_us_inspire)
        %a{href:hoc_uri('/resources/how-to')}
          =hoc_s(:front_join_us_inspire_link)
        %br/

        %b=hoc_s(:front_join_us_parent)
        %a{href:hoc_uri('/resources')}
          =hoc_s(:front_join_us_ask_link)
        =hoc_s(:front_join_us_ask)
        %br/

        %b=hoc_s(:front_join_us_computer_science)
        %a{href:hoc_uri('/resources')}
          =hoc_s(:front_join_us_spread)
        =hoc_s(:front_join_us_organize)
        %br/

  #hoclinks.row
    .col-xs-12{style: "text-align: left; font-size: 16px; line-height:30px; font-weight: 400; padding-left:3em"}
      %a{href:hoc_uri('/resources/how-to')}
        =hoc_s(:front_join_us_how_to_run)
      %br/

      %a{href:hoc_uri('/resources')}
        =hoc_s(:front_join_us_help_promote)
