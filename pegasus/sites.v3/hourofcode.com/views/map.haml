-total_count = DB[:forms].where(kind:'HocSignup2015').count
-if @company
  -company_name = hoc_s("company_" + @company)
  -company_total = format_integer_with_commas(company_count(@company))
  %a.float-left{href: resolve_url('/events/all')}
    %h2.mapheader
      = hoc_s(:map_header).gsub('#', format_integer_with_commas(total_count)) + ","  
      = hoc_s(:map_header_company).gsub('#', company_total).gsub('company', company_name)
  %a{href: resolve_url("/#join")}
    %button.signup-button
      = hoc_s(:signup_your_event)
-elsif @country != 'us'
  -country_total = format_integer_with_commas(country_count(@company))
  %h2.mapheader.float-left
    %a{href: resolve_url("/events/all")}
      = hoc_s(:map_header).gsub('#', format_integer_with_commas(total_count)) + ","
    %a{href: resolve_url("/events/all/#{solr_country_code}")}
      = hoc_s(:map_header_country).gsub('#', format_integer_with_commas(country_total)).gsub('%{country}', country_full_name)
  %a{href: resolve_url("/#join")}
    %button.signup-button
      = hoc_s(:signup_your_event)
-else
  .mapheader
    %a.float-left{href: resolve_url("/events/all")}
      %h2= hoc_s(:map_header).gsub('#', format_integer_with_commas(total_count))
    %a{href: resolve_url("/#join")}
      %button.signup-button
        = hoc_s(:signup_your_event)

