-# As of 2023 Twitter no longer supports tweet collection embeds.
-# To account for this we'll feature one tweet and link out to the collection.
-if @language == 'en'
  .section-wrapper
    .article-wrapper
      %article
        =view :home_twitter_embed_single
        %a.twitter-grid{href: "https://twitter.com/codeorg/timelines/925449654308704256"}
          =hoc_s(:highlights_header)
    .highlights-column
      .highlight-tiles
        - highlights.each do |item|
          = view :highlight_item, item: item
        .clear
      %a.see-more{href: "/highlights"}
        =hoc_s(:highlights_see_more)
-elsif latam_country_code?(@country) || @country == 'la' || @language == 'la'
