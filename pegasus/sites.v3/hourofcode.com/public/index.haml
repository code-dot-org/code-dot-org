:css
  html, body, #gmap {
    height: 100%;
    margin: 0px;
    padding: 0px;
  }
  .hero-image {
    z-index: -5;
    position: absolute;
    left: 0;
    top: 0;
    background-size: cover;
    width: 100%;
    height: 100%;
    opacity: 0;
  }

- imageheight = 590

= view :answer_dash

