---
layout: wide
---

:ruby
  @header["title"] = hoc_s("hoc_activities_more.heading")

  tutorials = DB[:cdo_tutorials_more].all

:css

  p {
    font-size: 1rem;
  }

  ul {
    margin: 2rem 0 0;

    & > li {
      padding-left: unset;
      text-indent: unset;
      display: flex;
      gap: 8px;
    }
  }

%link{href: '/css/full-width-section.css', rel:'stylesheet', type:'text/css'}

%main
  %section
    .wrapper
      %h1.no-margin-top
        =hoc_s("hoc_activities_more.heading")
      %p=hoc_s("hoc_activities_more.desc_01")
      %p=hoc_s("hoc_activities_more.desc_02")
      %p=hoc_s("hoc_activities_more.desc_03")
      %ul
        - tutorials.each do |value|
          %li
            %a.has-external-link{href: value[:url_s], target: "_blank", rel: "noopener noreferrer", style: "display: block;"}
              = value[:name_s]
