:ruby
  card_item = [
    {
      image: "/images/editorial-card-ai-generic.png",
      title: hoc_s("ai_ta_page.resources.curriculum.title"),
      desc: hoc_s("ai_ta_page.resources.curriculum.desc"),
      url: "/ai",
      button_label: hoc_s("ai_ta_page.resources.curriculum.button"),
    },
    {
      image: "/images/editorial-card-teacher-pointing.png",
      title: hoc_s("ai_ta_page.resources.pl.title"),
      desc: hoc_s("ai_ta_page.resources.pl.desc"),
      url: "/professional-learning",
      button_label: hoc_s("ai_ta_page.resources.pl.button"),
    },
    {
      image: "/images/editorial-card-ai-101.png",
      title: hoc_s("ai_ta_page.resources.videos.title"),
      desc: hoc_s("ai_ta_page.resources.videos.desc"),
      url: "/ai/pl/101",
      button_label: hoc_s("ai_ta_page.resources.videos.button"),
    },
  ]

%div.editorial-cards-wrapper
  - card_item.each do |card_item|
    .flex-container.justify-space-between.align-content-baseline.wrap
      .content-wrapper
        %img{src: card_item[:image], alt: ""}
        %h3.heading-sm
          = card_item[:title]
        %p.no-margin-bottom
          = card_item[:desc]
      .content-footer
        %a.link-button{href: card_item[:url]}
          = card_item[:button_label]
