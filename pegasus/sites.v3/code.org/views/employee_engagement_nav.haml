#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'All opportunities'=>'/employee-engagement', 'Classroom visit'=>'/employee-engagement/classroom', 'Hour of Code'=>'/employee-engagement/hour-of-code', 'After school club'=>'/employee-engagement/after-school', 'Company visit'=>'/employee-engagement/company-visit', 'CS Mentors'=>'/employee-engagement/cs-mentors'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

