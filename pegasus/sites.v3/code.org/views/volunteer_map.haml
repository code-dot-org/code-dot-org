:css
  .mapboxgl-ctrl {
    width: 100%;
    z-index: 2;
  }

  .mapboxgl-ctrl ul li {
    padding-left: 0;
    text-indent: 0;
  }

  .mapboxgl-ctrl ul li:before {
    content: none;
    color: #00a1e6;
  }

  .marker {
    border: none;
    cursor: pointer;
    height: 56px;
    width: 56px;
    background-image: url(https://maps.google.com/mapfiles/kml/paddle/red-stars.png);
    background-color: rgba(0, 0, 0, 0);
  }

:javascript
  mapboxgl.accessToken = "#{CDO.mapbox_access_token}";

