- require 'cdo/footer'
- options = {ge_region: params[:ge_region]}
- footer_contents = Cdo::Footer.get_footer_contents(options)
%footer#pagefooter
  .content
    .left{:style=>"float:left; max-width: 80%;"}
      - @privacy_updated = DCDO.get('recent_privacy_policy_update', nil)
      - links = (footer_contents[:links][:code_org] || []).map(&:dup)
      - links.each_with_index do |link, index|
        - if @privacy_updated && link[:title] == 'privacy_policy'
          - link[:title] = 'privacy_policy_updated'
        - if link[:domain] == 'studio.code.org'
          - link[:href] = CDO.studio_url(link[:url])
        - elsif link[:domain] == 'code.org'
          - link[:href] = CDO.code_org_url(link[:url])
        - else
          - link[:href] = link[:url]
          - link[:rel] = "noopener noreferrer nofollow"
        %a.whitefooterlink{link.except(:title, :url, :domain)}
          !=I18n.t("footer_#{link[:title]}")
        - unless index == links.length - 1
          .dim &nbsp; | &nbsp;

      %small.dim
        !=I18n.t(:footer_trademark, current_year: Time.now.year, cs_discoveries: "CS Discoveries&reg;")
        %br
        !=I18n.t(:footer_built_on_github)
      %div.powered-by-aws
        %a{:href=>"https://aws.amazon.com/what-is-cloud-computing"}
          %img{:src=>"/shared/images/Powered-By_logo-horiz_RGB_REV.png", :alt=>"Powered by AWS Cloud Computing", :style=>"width: 190px"}
    .right{:style=>"float:right"}
      .language-dropdown
        =view :language
      .social-media{:style=>"margin-top: 10px; margin-left: 10px;"}
        %small
          %a.whitefooterlink{:href=>"https://www.facebook.com/Code.org/", :'aria-label'=>hoc_s(:footer_menu_facebook), :target=>"_blank", :style=>'text-decoration: none;'}
            %i.fa.fa-facebook.fa-lg
            &nbsp; &nbsp;
          %a.whitefooterlink{:href=>"https://twitter.com/codeorg", :'aria-label'=>hoc_s(:footer_menu_twitter), :target=>"_blank", :style=>'text-decoration: none;'}
            %i.fa.fa-twitter.fa-lg
            &nbsp; &nbsp;
          %a.whitefooterlink{:href=>"https://www.instagram.com/codeorg/", :'aria-label'=>hoc_s(:footer_menu_instagram), :target=>"_blank", :style=>'text-decoration: none;'}
            %i.fa.fa-instagram.fa-lg
            &nbsp; &nbsp;
          %a.whitefooterlink{:href=>"https://medium.com/@codeorg", :'aria-label'=>hoc_s(:footer_menu_medium), :target=>"_blank", :style=>'text-decoration: none;'}
            %img{src: '/images/icons/medium-monogram-white.png', alt: '', style: "width: 20px"}
