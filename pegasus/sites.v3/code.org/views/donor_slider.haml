-supporters = DB[:cdo_donors].where(level_s:'platinum').or(level_s:'gold').order(:url_s)

%link{:href=>"/css/donor_slider.css", :rel=>"stylesheet"}
%script{:src=>"/js/donor_slider.js"}

%div{:class=>'donor-slider'}
  %h2{:id=>'level_indicator'} Platinum Supporters ($3,000,000+ contribution)

  - supporters.each do |supporter, name_s|
    - avatar_url = avatar_image_thumbnail(supporter[:name_s])
    %a{:href=>supporter[:url_s]}
      %div{:class=>"badge "  + supporter[:level_s], :style=>"display: none;"}
        - if avatar_url != nil
          %img{:src=> avatar_url}
        - if supporter[:name_s] != "Google" && supporter[:name_s] != "Microsoft" && supporter[:name_s] != "Omidyar Network"
          %p{:class=>"label", :style=>'text-align: center; vertical-align: middle; line-height: 90px; display: block; margin: 0; padding: 0;'}
            =supporter[:name_s]
        - elsif supporter[:name_s] == "Google" || supporter[:name_s] == "Microsoft" || supporter[:name_s] == "Omidyar Network"
          %p{:class=>"label", :style=>'text-align: center; vertical-align: middle; line-height: 90px; display: block; visibility: hidden; margin: 0; padding: 0;'}
            =supporter[:name_s]

  %br
  %a{:href=>'../about/donors'} See all donors
