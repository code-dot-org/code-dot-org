.carousel-wrapper
  %swiper-container.swiper-elementary{navigation: "true", "navigation-next-el": ".nav-next-elementary", "navigation-prev-el": ".nav-prev-elementary", pagination: "true", init: "false"}
    - block_item.each do |block_item|
      %swiper-slide
        .action-block.action-block--one-col.flex-space-between
          .content-wrapper
            %p.overline
              = block_item[:overline]
            %h3
              = block_item[:title]
            %img{src: "#{block_item[:image]}", alt: "", style: "width: 100%"}
            %p
              %strong=hoc_s(:module_label_curriculum)
              = block_item[:curriculum]
            %p
              %strong=hoc_s(:module_label_duration)
              = block_item[:duration]
            %p
              %strong=hoc_s(:module_label_prerequisites)
              = block_item[:prerequisites]
          .content-footer
            %a.link-button{href: block_item[:url_primary], aria:{label: "#{block_item[:aria_label_primary]}"}}
              =hoc_s(:call_to_action_start_pl)
            %a.link-button.secondary{href: block_item[:url_secondary], aria:{label: "#{block_item[:aria_label_secondary]}"}}
              =hoc_s(:call_to_action_explore_curriculum)

  %button.swiper-nav-prev.nav-prev-elementary
  %button.swiper-nav-next.nav-next-elementary
