#language{:style=>'width: 780px; padding: 0; margin: 0;'}
  -DB[:cdo_languages].where("crowdin_code_s != 'en'").each_slice(6) do |group|
    .language_row{:style=>'width: 780px; padding: 0; margin: 0;'}
      - group.each do |lang|
        .language_column{:style=>'width: 130px; height: 130px; float: left; display: table;'}
          %div
            - project_url = "http://crowdin.com/project/codeorg/#{lang[:crowdin_code_s]}"
            - image_url = "/images/flags/#{lang[:crowdin_code_s]}.png"
            %a{:href=>project_url, :style=>'display: table-cell; text-decoration: none;'}
              %img{:src=>image_url, :style=>'max-width: 130px; max-height: 130px;'}
              %br{:style=>'clear: both;'}= lang[:english_name_s]
