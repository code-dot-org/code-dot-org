  # FontAwesome icon
  icon_check = "fa-solid fa-check-circle"
  channels = [
    'syBuoFelbGB3eOmNVoQGrWMXEk0l1EhkIX6c08ujq6s',
    'Ehnks69B0Whcn_YQQNCK4GUHAPU3WSG2jfilvQF1kfo',
