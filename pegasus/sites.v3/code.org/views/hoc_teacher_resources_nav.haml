#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'MINECRAFT Hour of Code'=>'/hourofcode/mc','Star Wars: Build a Galaxy with Code'=>'/hourofcode/starwars','Code with Anna and Elsa'=>'/hourofcode/frozen','Write your first computer program'=>'/hourofcode/hourofcode','Make a Flappy Game'=>'/hourofcode/flappy','Infinity Play Lab'=>'/hourofcode/infinity','Play Lab'=>'/hourofcode/playlab','Artist'=>'/hourofcode/artist','Conditionals: Unplugged'=>'/hourofcode/unplugged-conditionals-with-cards','Back to all tutorials'=>'/learn'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr
