#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'Write your first computer program'=>'/hourofcode/hour-of-code','Code with Anna and Elsa'=>'/hourofcode/frozen','Make a Flappy Game'=>'/hourofcode/flappy','Play Lab'=>'/hourofcode/play-lab','Conditionals: Unplugged'=>'/hourofcode/unplugged-conditionals-with-cards','Back to all tutorials'=>'/learn'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr
