- display_professional_learning_banners = false
- if request.locale == "en-US" && display_professional_learning_banners
  = inline_css 'professional_learning_marketing_banner.css'
  - header_text = 'Help students become superheroes!'
  - text = "Our Professional Learning program helps #{audience_text} teach computer science!"
  - homepage ||= false
  - if homepage
    - large_image = "/images/homepage/superhero-banner-gold.png"
    - half_image = "/images/homepage/superhero-banner-half-gold.png"
  - else
    - large_image = "/images/homepage/superhero-banner.png"
    - half_image = "/images/homepage/superhero-banner-half-blue.png"

  .homepage-professional-learning-banner{class: homepage ? 'animate-text' : ''}
    %a.linktag#pl-2019{href: link_address}
      .professional-learning-banner-desktop.desktop-feature{class: homepage ? 'homepage' : ''}
        .banner
          %img{src: large_image}
        .text-wrapper
          .header= header_text
          .text= text
        .right-button
          %button
            #{button_label}
      .professional-learning-banner-tablet.tablet-restrictive-feature{class: homepage ? 'homepage' : ''}
        .banner
          %img{src: half_image}
          .text-wrapper
            .header= header_text
            .text= text
            %button
              #{button_label}
      .professional-learning-banner-phone.phone-feature{class: homepage ? 'homepage' : ''}
        .text-wrapper
          .header= header_text
          .text= text
          %button
            #{button_label}

    .clear
