.col-50
  .tutorial-tile
    %a{href: "/ai"}
      %img.tutorial-tile-img{src: "/images/fill-485x260/oceans/ai_2020_overview.png", alt: I18n.t(:hoc_ai_alt_text)}
    .tutorial-info
      %span
        %h2.tutorial-info-h=hoc_s(:hoc2020_ai_header)
        .smalltext=hoc_s(:hoc_overview_oceans_tutorial_desc)
