:ruby
  card_item = [
    {
      image: "/images/admins-page-curriculum.png",
      title: hoc_s("intl_pl_page.resources.curriculum.title"),
      desc: hoc_s("intl_pl_page.resources.curriculum.desc"),
      url: CDO.studio_url("/catalog"),
      button_label: hoc_s("intl_pl_page.resources.curriculum.button"),
    },
    {
      image: "/images/editorial-card-teacher-forum.png",
      title: hoc_s("intl_pl_page.resources.community.title"),
      desc: hoc_s("intl_pl_page.resources.community.desc"),
      url: "https://forum.code.org",
      button_label: hoc_s("intl_pl_page.resources.community.button"),
    },
    {
      image: "/images/editorial-card-support.png",
      title: hoc_s("intl_pl_page.resources.support.title"),
      desc: hoc_s("intl_pl_page.resources.support.desc"),
      url: "https://support.code.org",
      button_label: hoc_s("intl_pl_page.resources.support.button"),
    },
  ]

%div.editorial-cards-wrapper
  - card_item.each do |card_item|
    .flex-container.justify-space-between.align-content-baseline.wrap
      .content-wrapper
        %img{src: card_item[:image], alt: ""}
        %h3.heading-sm
          = card_item[:title]
        %p.no-margin-bottom
          = card_item[:desc]
      .content-footer
        %a.link-button{href: card_item[:url]}
          = card_item[:button_label]
