-# an ultra-simple mobile header

#pageheader
  .container_responsive
    #left
      %a{:href=>'/'}
        %img#logo{:src=>'/images/logo.png'}

    #hoc-nav
      %ul.hide-responsive-menu
        %li
          %a{href:resolve_url('/student')} Learn
        %li
          %a{href:resolve_url('/educate')} Teach
        %li
          %a{href:resolve_url('/promote')} Stats
        %li
          %a{href:resolve_url('/help')} Help Us
        %li
          %a#about-more{href: "#"}
            About
            %b.caret
        %span.about-nav.hide-about
          %li
            %a{:href => "/about"} About Us
          %li
            %a{:href => "/about/leadership"} Leadership
          %li
            %a{:href => "/about/donors"} Donors
          %li
            %a{:href => "/about/partners"} Partners
          %li
            %a{:href => "/about/team"} Full Team
          %li
            %a{:href => "/about/news"} Newsroom
          %li
            %a{:href => "/about/evaluation"} Evaluation
          %li
            %a{:href => "/about/jobs"} Jobs
          %li
            %a{:href => "/contact"} Contact Us
          %li
            %a{:href => "/faq"} FAQs

      %a#hoc-nav-hamburger{href: "#"}
        &#9776;

:css
  #hoc-nav {
    display: inline-block;
    text-align: left;
    float: right;
    width: 50%;
  }

  #hoc-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    width: 250px;
    right: 0;
  }

  #hoc-nav ul li {
    font-size: 18px;
    color: white;
    display: inline-block;
    float: left;
    padding: 0.25em 0em;
    margin-right: 1em;
    text-indent: 0;
    list-style-type: none;
    max-width: 150px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }

  #hoc-nav ul li:before {
    content: none;      /* Needed to remove the bullet disc. This was set from other CSS. */
  }

  #hoc-nav ul li:last-child {
    margin-right: 0;    /* No margin needed for the last item */
  }

  #hoc-nav ul li a {
    font-family: 'Gotham 4r', sans-serif;
    font-size: 18px;
    color: white;
    text-transform: uppercase;
    text-decoration: none;
  }

  #hoc-nav ul li a:hover {
    border-bottom: solid 2px rgb(255, 138, 0);
  }

  #hoc-nav-hamburger {
    font-size: 36px;
    color: white;
    vertical-align: middle;
    text-decoration: none;
    display: none;
    float: right;
    margin-top: 10px;
  }

  @media (max-width: 992px) {
    #hoc-nav{
      position: relative;
    }

    #hoc-nav ul.hide-responsive-menu, .hide-about {
      display: none;
    }

    #hoc-nav ul {
      position: absolute;
      top: 4em;
      background-color: rgb(0, 178, 192);   /* Needed as the opaque fallback colour for IE8 */
      background-color: rgba(0, 178, 192, .9);
      z-index: 99;
    }

    #hoc-nav ul:after{   /* This is the arrow in the responsive menu */
      bottom: 100%;
      left: 16em;
      border: solid transparent;
      content: " ";
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
      border-color: rgba(0, 178, 192, 0);
      border-bottom-color: rgb(0, 178, 192);  /* Needed as the opaque fallback colour for IE8 */
      border-bottom-color: rgba(0, 178, 192, .9);
      border-width: 8px;
    }

    #hoc-nav ul li {
      display: block;
      float: none;
      margin: 1em 2em 1em 1em;
      white-space: normal;
      overflow: visible;
    }

    #hoc-nav-hamburger {
      display: inline-block;
    }

    #hoc-nav-hamburger:hover,
    #hoc-nav-hamburger:active {
      color: rgb(255, 138, 0);
    }
  }

:javascript

  $(function() {

    // When nav hamburger is clicked, toggle responsive menu
    $('#hoc-nav-hamburger').click(function(e){
        $('#hoc-nav ul').toggleClass('hide-responsive-menu');
        e.preventDefault();
    });
    //When ABOUT is clicked, show more about navigation options
    $('#about-more').click(function(e){
        $('#hoc-nav ul span').toggleClass('hide-about');
        e.preventDefault();
    });

    // When clicking anywhere outside the responsive menus, dismiss them
    $(document).click(function(e) {
      if(!$(e.target).closest('#hoc-nav').length) {
        $('#hoc-nav ul').addClass('hide-responsive-menu');
      }
    });
  });
