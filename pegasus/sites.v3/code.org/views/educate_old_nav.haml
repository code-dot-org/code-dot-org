#about_nav
  %span.about_list
    -current_url = request.path_info
    -{'Educator Overview'=>'/educate','Hour of Code'=>'/educate/hoc','Curriculum'=>'/educate/curriculum','Professional Development'=>'/educate/professional-development','District Partnerships'=>'/educate/districts','Community and Support'=>'/educate/community','Inspire Students'=>'/educate/inspire','Video Library'=>'/educate/videos','3rd Party Resources'=>'/educate/3rdparty'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr
