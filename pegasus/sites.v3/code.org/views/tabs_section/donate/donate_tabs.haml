-# Can only be used on rebranded pages that use the
-# "design-system-pegasus.scss" stylesheet.

-# Shows tabs UI on desktop
.tabs-section.donate-tabs.show-desktop
  -# Tabs nav
  %nav.flex-container.justify-space-between
    %button.tab.daf-direct.active{"data-content": "#daf-direct"}
      =hoc_s(:donate_tabs_tab_label_daf_direct)
    %button.tab.amazon{"data-content": "#amazon"}
      =hoc_s(:donate_tabs_tab_label_amazon)
    %button.tab.bitpay{"data-content": "#bitpay"}
      =hoc_s(:donate_tabs_tab_label_bitpay)
    %button.tab.employee-match{"data-content": "#employee-match"}
      =hoc_s(:donate_tabs_tab_label_employee_match)
  -# Tabs content
  %div#daf-direct.content.show
    = view :"tabs_section/donate/donate_tabs_daf_direct"
  %div#amazon.content
    = view :"tabs_section/donate/donate_tabs_amazon"
  %div#bitpay.content.has-external-link
    = view :"tabs_section/donate/donate_tabs_bitpay"
  %div#employee-match.content
    = view :"tabs_section/donate/donate_tabs_employee_match"

-# Shows accordion UI on smaller screens
.tabs-section.donate-tabs.show-tablet-and-mobile
  %details.daf-direct
    %summary=hoc_s(:donate_tabs_tab_label_daf_direct)
    = view :"tabs_section/donate/donate_tabs_daf_direct"
  %details.amazon
    %summary=hoc_s(:donate_tabs_tab_label_amazon)
    = view :"tabs_section/donate/donate_tabs_amazon"
  %details.bitpay.has-external-link
    %summary=hoc_s(:donate_tabs_tab_label_bitpay)
    = view :"tabs_section/donate/donate_tabs_bitpay"
  %details.employee-match
    %summary=hoc_s(:donate_tabs_tab_label_employee_match)
    = view :"tabs_section/donate/donate_tabs_employee_match"

%script{src: '../js/tabs-section.js'}
