:ruby
  videos = [
    {
      youtube_code: 'mFPg96gdPkc',
      title: "Change the World - Hour of Code",
      download_link: "//videos.code.org/social/ChangeTheWorld_v5.mp4",
    },
    {
      youtube_code: 'uhcA6K8rWp0',
      title: "Change the Face of Computer Science",
      download_link: "//videos.code.org/social/change_the_face_of_cs.mp4",
    },
    {
      youtube_code: 'Ix_lDw4xxTk',
      title: "Beyond Binary: Computer Science is for Everyone",
      download_link: "//videos.code.org/social/Pride_Month_2024.mp4",
