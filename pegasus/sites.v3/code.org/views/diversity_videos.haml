  ]

.carousel-wrapper.video-carousel 
  %swiper-container.diversity-videos{navigation: "true", "navigation-next-el": ".nav-next-el", "navigation-prev-el": ".nav-prev-el", pagination: "true", init: "false", "allow-touch-move": "false"}
    - videos.each do |video|
      %swiper-slide
        %figure
          = view :video_with_fallback, video_code: video[:youtube_code], download_path: video[:download_link]
        %figcaption.no-margin-bottom
          = video[:title]

  %button.swiper-nav-prev.nav-prev-el
  %button.swiper-nav-next.nav-next-el
