- specs ||= nil
- url ||= nil
- cta ||= nil
- photo_cred ||= nil

.jumbo-container
  .img-container
    %img.jumbo-img{src: img}

  - unless photo_cred.nil?
    .photo-cred
      %i= photo_cred

  .jumbo-tutorial
    %h1.jumbo-h1= title
    .jumbo-tutorial-box
      .jumbo-tutorial-info
        %h1.jumbo-h1-second-box= title
        %p.jumbo-tutorial-description= desc
        - unless specs.nil?
          %p.jumbo-tutorial-specs= specs
      - unless url.nil? || cta.nil?
        %a{:href=>url, :target=>'_self'}
          %button= cta

  #secondary-nav
    .secondary-nav
      - nav_bar.each_with_index do |nav, index|
        %a.navlink{:href=>nav[:url]}
          = nav[:text]
        - unless nav == nav_bar.last
          &nbsp; &nbsp; | &nbsp; &nbsp;
.clear

:javascript
  $(".jumbo-container .secondary-nav").on('click', 'a', function (event){
    event.preventDefault();
    $('html, body').animate( {scrollTop: $($.attr(this, 'href')).offset().top}, 800);
  });
