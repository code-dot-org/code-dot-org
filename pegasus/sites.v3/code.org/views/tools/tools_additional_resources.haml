:ruby
  block_items = [
    {
      title: hoc_s("tools_page.additional_resources.catalog.title"),
      img: "/images/action-blocks/action-block-catalog.png",
      desc: hoc_s("tools_page.additional_resources.catalog.desc"),
      url: CDO.studio_url("/catalog"),
      button_label: hoc_s("tools_page.additional_resources.catalog.button_label"),
    },
    {
      title: hoc_s("tools_page.additional_resources.video_library.title"),
      img: "/images/action-blocks/action-block-videos.png",
      desc: hoc_s("tools_page.additional_resources.video_library.desc"),
      url: "/educate/resources/videos",
      button_label: hoc_s("tools_page.additional_resources.video_library.button_label"),
    },
    {
      title: hoc_s("tools_page.additional_resources.hour_of_code.title"),
      img: "/images/action-blocks/action-block-hoc.png",
      desc: hoc_s("tools_page.additional_resources.hour_of_code.desc"),
      url: "/hourofcode",
      button_label: hoc_s("tools_page.additional_resources.hour_of_code.button_label"),
    },
  ]

.action-block__wrapper.action-block__wrapper--three-col
  - block_items.each do |block_item|
    .action-block.action-block--one-col.flex-space-between
      .content-wrapper
        %h3
          = block_item[:title]
        %img{src: block_item[:img], alt: ""}
        %p
          = block_item[:desc]
      .content-footer
        %a.link-button{href: block_item[:url]}
          = block_item[:button_label]
