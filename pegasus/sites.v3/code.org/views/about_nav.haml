#about_nav
  %span.about_list
    -current_url = request.path_info
    -{ 'About Us'=>'/about', 'Values'=>'/about/values', 'Leadership'=>'/about/leadership', 'Donors'=>'/about/donors', 'Partners'=>'/about/partners','Full Team'=>'/about/team','Diversity Council'=>'/about/diversity-council','Newsroom'=>'/about/news', 'Evaluation'=>'/about/evaluation', 'Careers'=>'/about/careers', 'Contact Us'=>'/contact', 'FAQs'=>'/faq'}.each_pair do |label,url|
      - if current_url == url
        %span.about_list_item_selected= label
      -else
        %a.about_list_item{:href=>url}= label
      %hr.narrow_hr

