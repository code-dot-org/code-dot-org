- if !!DCDO.get('show-updated-lms-content', false)
  %link{href: "/css/generated/lms-skinny-banner.css", rel: "stylesheet"}

  %aside.lms-banner
    .wrapper.flex-container.justify-space-between.align-items-center.wrap
      .text-wrapper
        %h5.white
          =hoc_s('lms_skinny_banner_title')
        %p.white.no-margin-bottom
          =hoc_s('lms_skinny_banner_desc')
      .flex-container.justify-center.align-items-center.wrap-reverse{style: "column-gap: 5rem;"}
        %img{src:"/images/marketing/lms-integration-icons.png", alt: ""}
        %a.link-button.white{href: CDO.code_org_url("/lms"), "aria-label": hoc_s('lms_skinny_banner_learn_more_aria_label')}
          =hoc_s('call_to_action_learn_more')
