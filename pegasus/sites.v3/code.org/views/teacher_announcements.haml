- cta_url = "http://blog.code.org/post/147243645493/"
- csp_widgets_url = "http://teacherblog.code.org/post/148059231974/explore-cs-concepts-in-any-classroom-with-these-4"

.teacher-announce
  .announce-heading
    = I18n.t(:dashboard_announcements)
  .announce-content
    %a{href: cta_url, target: '_blank'}
      .content-img-container
        %img.content-img{src: CDO.shared_image_url('/teacher-announcement/privacy-policy.png'), width: '200px'}
    .content-text
      = I18n.t(:dashboard_announce_message)
    .announce-learn-more
      %a{href: cta_url, target: '_blank'}
        %button.primary= I18n.t(:dashboard_announce_learn_more_button)
  .announce-content
    %a{href: csp_widgets_url, target: '_blank'}
      .content-img-container
        %img.content-img{src: CDO.shared_image_url('/teacher-announcement/csp-widgets.png'), width: '200px'}
    .content-text
      = I18n.t(:dashboard_announce_csp_widgets_message)
    .announce-learn-more
      %a{href: csp_widgets_url, target: '_blank'}
        %button.primary= I18n.t(:dashboard_announce_try_now_button)  
  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      = I18n.t('dashboard_announce_all', teacher_blog_url: 'http://teacherblog.code.org/')
