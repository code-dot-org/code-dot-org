- display_poetry_banner = false

- if display_poetry_banner
  %link{href: "/css/generated/poetry-skinny-banner.css", rel: "stylesheet"}

  %aside.poetry-banner
    .wrapper.flex-container.justify-space-between.align-items-center.wrap
      .text-wrapper
        %h5.white
          =hoc_s('poetry_banner_title')
        %p.white.no-margin-bottom
          =hoc_s('poetry_banner_desc')
      .flex-container.justify-center.align-items-center.wrap-reverse{style: "column-gap: 5rem;"}
        %img{src:"/images/marketing/octopus-poetry.png", alt: ""}
        %a.link-button.white{href: CDO.code_org_url("/poetry"), "aria-label": hoc_s('poetry_banner_explore_aria_label')}
          =hoc_s('call_to_action_explore_activities')
