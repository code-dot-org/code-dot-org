              - if course[:group]
                .groupname
                  =(course[:group])
          .course.detailcontainer{id: "courseextra-#{course_index}", style: "display: none; color: grey; cursor: auto"}
            .arrow_box{class: "arrow-offset-#{course[:starts]}"}
