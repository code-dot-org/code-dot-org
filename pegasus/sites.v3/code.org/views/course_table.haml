                  - if course[:link]
                    %br/
                    %a{href: course[:link], style: "padding-left: 0px; color: grey"}
                      Learn more
              .arrow_box_close{style: "position: absolute; right: 10px; top: 0px; cursor: pointer", onclick: "$('#courseextra-#{course_index}').slideUp()" }
