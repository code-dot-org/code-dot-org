- courses = []
- courses << { name: "Course 1", starts: 0, ends: 1, description: "Start with Course 1 for early readers", group: "CS Fundamentals" }
- courses << { name: "Course 2", starts: 1, ends: 5, description: "Start with Course 2 for students who can read", group: "CS Fundamentals" }
- courses << { name: "Course 3", starts: 3, ends: 5, description: "Course 3 is a follow-up to Course 2", group: "CS Fundamentals" }
- courses << { name: "Course 4", starts: 5, ends: 6, description: "Course 4 is a follow-up to Course 3", group: "CS Fundamentals" }

- courses << { name: "CS in Science", starts: 6, ends: 8, description: "Learn programming through scientific models" }
- courses << { name: "CS in Algebra ", starts: 6, ends: 8, description: "Learn functional programming through Algebra" }
- courses << { name: "CS Discoveries", starts: 7, ends: 9, description: "Our new course for CS" }
- courses << { name: "Exploring Computer Science", starts: 9, ends: 12, description: "A high school course designed to broaden participation in computer science" }
- courses << { name: "Computer Science Principles", subtitle: "upcoming AP course", starts: 9, ends: 12, description: "A course teaching a wide range of computer science topics, including programming in JavaScript" }

- courses << { name: "Accelerated Course", starts: 5, ends: 12, description: "An alternate 20-hour course.", group: "CS Fundamentals", opacity: 0.7 }

.courses
  .group
    .grouprow.bar-6
      Elementary school
    .grouprow.bar-3
      Middle school
    .grouprow.bar-4
      High school
  .grade.break
    .graderow.bar-1
      K
    - (1..12).each do |n|
      .graderow.bar-1
        = n
    - courses.each_with_index do |course, course_index|
      .course.break{id: "course-#{course_index}", onclick: "$('#courseextra-#{course_index}').slideToggle(); $('.extra').not('#courseextra-#{course_index}').slideUp();"}
        - unless course[:starts] == 0
          %div{class: "bar-#{course[:starts]}"}
            &nbsp;
        %div{class: "courserow bar-#{course[:ends] - course[:starts] + 1}", style: "opacity: #{course[:opacity] || 1}"}
          .title
            =course[:name]
          - if course[:group]
            .groupname
              =(course[:group])
          .extra{id: "courseextra-#{course_index}", style: "display: none"}
            - if course[:subtitle]
              .subtitle
                =course[:subtitle]
                %br/
            .description
              =course[:description]

  .notes{style: "clear: both"}
    %h3
      Notes
    %ul
      %li
        All courses are intended to be entry points to the pathway
        %br/
        (exception: Courses 3 and 4 in CS Fundamentals recommend completion of Course 2)
      %li
        Actual implementation may vary
