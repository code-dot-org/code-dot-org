---
title: Learn about Artificial Intelligence (AI) | Code.org
theme: responsive_full_width
---

%link{href: '/css/generated/design-system-pegasus.css', rel: 'stylesheet'}
%link{href: "/css/generated/ai-styles.css", rel: "stylesheet"}

-# Import FontAwesome Pro
%script{src: "https://kit.fontawesome.com/ea2d9d4413.js", crossorigin: "anonymous"}

-# FontAwesome icons
- icon_sparkles = "fa-solid fa-sparkles"
- icon_lightbulb = "fa-solid fa-lightbulb"
- icon_magnifying_glass = "fa-solid fa-magnifying-glass"
- icon_book = "fa-solid fa-book"
- icon_person_chalkboard = "fa-solid fa-person-chalkboard"
- icon_video = "fa-solid fa-video"

%section.hero-banner-basic.bg-neutral-dark{style: "display: block !important"}
  .wrapper
    .text-wrapper.col-60
      %h1{style: "color: white; margin-bottom: 0"}=hoc_s(:ai_hero_heading_01)
      %h2.heading-xxl{style: "color: white"}=hoc_s(:ai_hero_heading_02)
      %p{style: "color: white"}=hoc_s(:ai_hero_desc)
    %figure.col-33{style: "float: right"}
      %img.fade-in-out{src: "/images/banners/ai-bot-wizard.svg", alt: "", style: "z-index: 10"}
      %img{src: "/images/banners/ai-bot-default.svg", alt: "", style: "position: relative;"}

    .clear

%section.intro
  .wrapper
    %h2=hoc_s(:ai_intro_heading)
    %div.col-50{style: "float: left; margin-top: 22px"}
      %figure.video-responsive{style: "max-width: unset"}
        %div
          %iframe{src: "https://www.youtube-nocookie.com/embed/dWRnCXbUDgA", allowFullScreen: 'true', frameborder: '0', title: "Why AI Matters with Deb Raji"}
        %figcaption
          %a{href: "#ai-videos"}=hoc_s(:ai_intro_video_caption)
    %div.flex-container.col-45{style: "float: right"}
      %ul.icon-bullet-list.full-width{style: "margin-top: 0"}
        %li
          %div
            %i{class: "#{icon_sparkles}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_01)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_01)
        %li
          %div
            %i{class: "#{icon_lightbulb}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_02)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_02)
        %li.no-margin-bottom
          %div
            %i{class: "#{icon_magnifying_glass}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_03)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_03)
    .clear

%section.bg-neutral-light
  .wrapper
    %h2=hoc_s(:ai_why_heading)
    %p=hoc_s(:ai_why_desc)
    %ul.link-list
      %li
        %i{class: "#{icon_book}"}
        %a{href:"#ai-curricula"}=hoc_s(:ai_why_link_01)
      %li
        %i{class: "#{icon_person_chalkboard}"}
        %a{href:"#ai-pl"}=hoc_s(:ai_why_link_02)
      %li
        %i{class: "#{icon_video}"}
        %a{href:"#ai-videos"}=hoc_s(:ai_why_link_03)

%a{id: "ai-curricula"}
%section
  .wrapper
    %h2=hoc_s(:ai_curricula_title)
    %p=hoc_s(:ai_curricula_desc)
    .action-block__wrapper.action-block__wrapper--three-col
      .action-block.action-block--one-col
        %p.overline=hoc_s(:ai_curriculum_grades_01)
        %h3=hoc_s(:ai_curriculum_title_01)
        %img{src: "/images/ai/ai-curriclum-machine-learning.png", alt: ""}
        %p{style: "height: 105px"}=hoc_s(:ai_curriculum_desc_01)
        %p=hoc_s(:ai_curriculum_duration_01)
        %a{href: CDO.studio_url("/s/blockchain-2023/lessons/1") , class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_01)}}
          =hoc_s(:call_to_action_explore_unit)
      .action-block.action-block--one-col
        %p.overline=hoc_s(:ai_curriculum_grades_02)
        %h3=hoc_s(:ai_curriculum_title_02)
        %img{src: "/images/ai/ai-curriclum-ethics.png", alt: ""}
        %p{style: "height: 105px"}=hoc_s(:ai_curriculum_desc_02)
        %p=hoc_s(:ai_curriculum_duration_02)
        %a{href: CDO.studio_url("/s/blockchain-2023/lessons/1") , class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_02)}}
          =hoc_s(:call_to_action_view_lesson_plan)
      .action-block.action-block--one-col
        %p.overline=hoc_s(:ai_curriculum_grades_03)
        %h3=hoc_s(:ai_curriculum_title_03)
        %img{src: "/images/ai/ai-curriclum-oceans.png", alt: ""}
        %p{style: "height: 105px"}=hoc_s(:ai_curriculum_desc_03)
        %p=hoc_s(:ai_curriculum_duration_03)
        %a{href: CDO.studio_url("/s/blockchain-2023/lessons/1") , class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_03)}}
          =hoc_s(:call_to_action_try_activity)

%section.bg-neutral-light
  .wrapper
    %h2 Quotes
    = view :pl_middle_high_carousel

%a{id: "ai-pl"}
%section
  .wrapper
    %h2 Preparing to teach AI
    .action-block.action-block--two-col
      %img{src: "/images/professional-learning/pl-teachers-talking.png", alt: "", class: "col-50"}
      .text-wrapper.col-50
        %p Your local Code.org Regional Partner provides high quality Code.org professional learning to teachers, and can help guide your school or district on implementation, certification, funding, and more. They are happy to answer any questions you may have about the program!
        = view :professional_development_workshops_regional_partner_search
        %a{href: "https://support.code.org/", class: "link-button secondary", target: "_blank", rel: "noopener noreferrer"} Visit our support center
    .clear

= view :section_divider_line

%a{id: "ai-videos"}
%section
  .wrapper
    %h2=hoc_s(:ai_video_series_title)
    %p=hoc_s(:ai_video_series_desc)
    .video-series
      = view :video_with_fallback, video_code: "Ok-xpKjKp2g", download_path: "//videos.code.org/ai_series/ai-01-intro-to-ai.mp4"
      = view :ai_vid_intro
      = view :ai_vid_mlintro
      = view :ai_vid_trainingdata
      = view :ai_vid_neuralnetworks
      = view :ai_vid_computervision
      = view :ai_vid_ethics1
      = view :ai_vid_ethics2

= view :section_divider_line

%section
  .wrapper
    %h2 Additional resources

= view :section_divider_line

%section
  .wrapper
    %h2 In partnership w/ Microsoft
