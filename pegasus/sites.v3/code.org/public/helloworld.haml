---
title: Hello World
theme: responsive_full_width
---

:javascript
  window.pegasus = window.pegasus || {};
  window.pegasus.STUDIO_URL = "#{CDO.studio_url}";

- js_locale = request.locale.to_s.downcase.tr('-', '_')
%script{src: webpack_asset_path("js/#{js_locale}/common_locale.js")}
%script{src: webpack_asset_path('js/code.org/public/helloworld.js')}

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/page/helloworld-styles.css", rel: "stylesheet"}

%section.hero-banner-basic.overlay
  .wrapper.flex-container.justify-space-between.align-items-center.wrap
    .text-wrapper.col-45
      %h1.white
        =hoc_s("hello_world.header")
      %p.body-one.white
        =hoc_s("hello_world.desc")
    %figure.col-45
      %img{src: "/images/banners/banner-transformers-one.png", alt: ""}
    .clear

%section#choose-theme
  .wrapper
    %h2=hoc_s("hello_world.theme.header")
    %p=hoc_s("hello_world.theme.desc")
    = view :carousel_helloworld

%section.quote.bg-neutral-dark
  .wrapper
    %h2.white.centered=hoc_s(:heading_featured_student_projects)
    #helloworld_student_projects

%section#continue.bg-neutral-light
  .wrapper
    %h2.centered
      =hoc_s("hello_world.continue.header")
    %p.centered
      =hoc_s("hello_world.continue.desc")
    .action-block.action-block--two-col.white
      .media-wrapper.col-50
        = view :display_video_thumbnail, id: "intro_csc", video_code: "GDcKJ1v2W1s", play_button: 'center', letterbox: 'false', download_path: "//videos.code.org/curriculum_videos/curriculum_video_csc.mp4"
      .text-wrapper.col-50
        %p.overline=hoc_s("game_design_page.elementary_curricula.game_design.overline")
        %h3=hoc_s(:curriculum_name_csc)
        %p=hoc_s(:csc_page_top_desc)
        %a.link-button{href: "/csc"}
          =hoc_s(:call_to_action_learn_more)
    .clear

%section
  .wrapper
    %h2.centered
      =hoc_s(:middle_high_page_additional_resources_title)
    = view :"transformers/additional_resources"

= view :analytics_event_log_helper, event_name: AnalyticsConstants::HELLOWORLD_PAGE_VISITED_EVENT
