---
title: Explore, Play, and Create with Computer Science
theme: responsive
---

%link{href: "/css/generated/hoc2022-landing-page.css", rel: "stylesheet"}

-# Import FontAwesome Pro
%script{src: "https://kit.fontawesome.com/ea2d9d4413.js", crossorigin: "anonymous"}

-# FontAwesome icons
- icon_rocket = "fa-regular fa-rocket"
- icon_futbol = "fa-regular fa-futbol"
- icon_paint = "fa-regular fa-paintbrush-pencil"

%header
  %span=I18n.t(:og_title_here)
  %h1=I18n.t(:hoc2022_banner_title)
  %h2=I18n.t(:try_it_yourself)
  %nav
    %ul
      %li
        %i{class: "#{icon_rocket}"}
        %a{href: "#explore"}
          =I18n.t(:hoc2022_landing_page_explore_title)
      %li
        %i{class: "#{icon_futbol}"}
        %a{href: "#play"}
          =I18n.t(:hoc2022_landing_page_play_title)
      %li
        %i{class: "#{icon_paint}"}
        %a{href: "#create"}
          =I18n.t(:hoc2022_landing_page_create_title)

%main

  %aside
    NASA skinny banner

  %a{id: 'explore'}
  %section.explore
    .wrapper
      %div
        %i{class: "#{icon_rocket}"}
        %h1
          =I18n.t(:hoc2022_landing_page_explore_title)
        %p
          =I18n.t(:hoc2022_landing_page_explore_description)

      %figure
        %iframe{src: "https://www.youtube.com/embed/ARLt0GcyRgQ", width: "560", height:"315"}

      %hr

  %a{id: 'play'}
  %section.play
    .wrapper
      %div
        %i{class: "#{icon_futbol}"}
        %h1
          =I18n.t(:hoc2022_landing_page_play_title)
        %p
          =I18n.t(:hoc2022_landing_page_play_description)

  %a{id: 'create'}
  %section.create
    .wrapper
      %div
        %i{class: "#{icon_paint}"}
        %h1
          =I18n.t(:hoc2022_landing_page_create_title)
        %p
          =I18n.t(:hoc2022_landing_page_create_description)
