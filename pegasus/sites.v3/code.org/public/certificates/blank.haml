:ruby
  @header["social"]["twitter:url"] = "http://#{request.host_with_port}/certificates/blank"
  @header["social"]["twitter:image:src"] = "http://#{request.host_with_port}/images/hour_of_code_certificate-640.jpg"
  @header["social"]["og:image"] = "http://#{request.host_with_port}/images/hour_of_code_certificate-640.jpg"
  @header["social"]["og:url"] = "http://#{request.host_with_port}/certificates/blank"

#hoc-certificate
  %a{:href=>"/printcertificate"}
    %img{:src=>"/images/hour_of_code_certificate.jpg", :alt=>"Certificate for Completion of One Hour of Code"}
#index
  #gap.feature-codeorg

  #top
    #video.col-63.desktop-pad-right
      = view :index_video

    #start.col-36
      #blurb.col-mobile-56.mobile-pad-right
        %br.desktop-feature

        .count{:style=>'font-size: 42px; line-height: 42px; font-weight:500' }
          -count_string = I18n.t(:n_have_learned_an_hoc).gsub("#", format_integer_with_commas(fetch_hoc_metrics['started']).to_s)
          -if request.locale == 'en-US'
            %a{:href=>'/leaderboards', :style=>'text-decoration:none'}
              != count_string
          -else
            != count_string
          %h4.desktop-feature=I18n.t(:anybody_can_learn)
        %br

      #getstarted.col-mobile-44
        #largegap.mobile-show-medium{:style=>"height:50px"}
        %a{:href=>'/learn'}
          %button{:style=>"font-size: 19px; font-family: 'Gotham 5r', sans-serif; height: 50px;"}
            =I18n.t(:get_started)

    #below.mobile-center{:style=>'clear:both; overflow:hidden; padding-top: 0px'}
