%section.bg-neutral-light
  .wrapper
    .lms-systems
      %h2
        =hoc_s("lms_page.top_module.heading")
      %p.body-two
        =hoc_s("lms_page.top_module.desc")
      =view :"lms/lms_provider_cards"
    %hr
    .integrations
      %h3
        =hoc_s("lms_page.integrations.heading")
      %p.body-two
        =hoc_s("lms_page.integrations.desc", markdown: :inline, locals: {help_article_link: 'https://support.code.org/hc/en-us/articles/4403192755725-Can-I-single-sign-on-SSO-to-Code-org-using-a-third-party-authentication-provider-like-Google-or-Clever'})
      =view :"lms/lms_sso_cards"

%section.why-use-integrations
  .wrapper
    %h2.centered
      =hoc_s("lms_page.reasoning.heading")
    = view :"lms/lms_editorial_cards"

%section.quote.bg-neutral-dark
  .wrapper
    %div.quotes-wrapper
      %p.quote-text.large
        =hoc_s("lms_page.teacher_quote.text_01")
      %p.no-margin-bottom
        =hoc_s("lms_page.teacher_quote.role_01")
        %span â€¢
        Indiana

%section#get-started.bg-neutral-light
  .wrapper
    %h2.centered
      =hoc_s("lms_page.get_started.heading")
    = view :"lms/lms_get_started"

%section
  .wrapper
    %h2.centered
      =hoc_s("lms_page.additional_resources.heading")
    %p.centered
      =hoc_s("lms_page.additional_resources.desc")
    = view :"lms/lms_additional_resources"

