      %h1.white
        =hoc_s("maker_page.top.heading")
      %p.body-one.no-margin-bottom.white
        =hoc_s("maker_page.top.desc")
    %figure
      %img{src: "/images/maker/maker-banner-image.svg", alt: "", style: "width: 100%"}

%section
  .wrapper
    .grid-container.two-col.justify-space-between.align-items-center.gap-4
      %figure
        %img.rounded-corners{src: "/images/maker/maker-students-cp.png", alt: "", style: "width: 100%"}
      .text-wrapper
        %h2=hoc_s("maker_page.what.heading")
        %p.heading-xs{style: "margin-bottom: 1rem"}
          =hoc_s("maker_page.what.desc_01")
        %p=hoc_s("maker_page.what.desc_02")

-# TODO - remove the divider line and unhide case study section when we get the link
