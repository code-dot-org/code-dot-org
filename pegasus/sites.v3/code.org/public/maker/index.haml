-# FontAwesome icons
- icon_microchip = "fa-solid fa-microchip"
- icon_hands_clapping = "fa-solid fa-hands-clapping"
- icon_face_smile = "fa-solid fa-face-smile"

%section.hero-banner-basic.overlay
  .wrapper.grid-container.justify-space-between.align-items-center.gap-4.wider-text
