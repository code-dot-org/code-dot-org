%section
  .wrapper
    %h2=hoc_s("maker_page.get_started.heading")
    %p=hoc_s("maker_page.get_started.desc")
    = view :maker_devices, curriculum_link_cp: "#curriculum-link-cp", curriculum_link_microbit: "#curriculum-link-microbit",  button_label: hoc_s("maker_page.get_started.button.see_curriculum.label"), aria_label_cp: hoc_s("maker_page.get_started.button.see_curriculum.aria_label", markdown: :inline, locals:{device: "BBC micro:bit"}), aria_label_microbit: hoc_s("maker_page.get_started.button.see_curriculum.aria_label", markdown: :inline, locals:{device: "Circuit Playground"})

%section.bg-neutral-light
  .wrapper.centered
    %h2=hoc_s("maker_page.why.heading")
    = view :maker_why_list

%section#curriculum-link-microbit
  .wrapper
    %h2=hoc_s("maker_page.curricula_microbit.heading")
    %p=hoc_s("maker_page.curricula_microbit.desc")
    = view :maker_curriculum_microbit_carousel

= view :section_divider_line

%section#curriculum-link-cp
  .wrapper
    %h2=hoc_s("maker_page.curricula_circuit_playground.heading")
    = view :maker_curriculum_circuit_playground, explore_unit_link: CDO.studio_url("/s/devices?viewAs=Instructor"), teach_unit_link: CDO.studio_url("/courses/self-paced-pl-physical-computing")

%section.bg-neutral-light
  .wrapper
    .grid-container.two-col.justify-space-between.align-items-center.gap-4
      .text-wrapper
        %h2=hoc_s("maker_page.careers.heading")
        %h3.heading-sm
          =hoc_s("maker_page.careers.subhead")
        %p.no-margin-bottom
          =hoc_s("maker_page.careers.desc")
      %figure.video-responsive{style: "margin-top: 5px; max-width: unset"}
        %div
          %iframe{src: "https://www.youtube-nocookie.com/embed/dhvQ7L5UScs", title: "Careers with Computer Science: Design Technologist at Meow Wolf", allowfullscreen: "true", frameborder: "0"}

%section
  .wrapper
    = view :subscribe_form, subscribe_form_section_title: hoc_s(:subscribe_form_section_title), subscribe_form_section_desc: hoc_s(:subscribe_form_section_desc_maker), form_height: "410px", form_src: "http://go.pardot.com/l/153401/2023-01-10/pqf2sr"

= view :section_divider_line

%section
  .wrapper.centered
    %h2=hoc_s("maker_page.additional_resources.heading")
    %p=hoc_s("maker_page.additional_resources.desc")
    = view :maker_additional_resources

= view :analytics_event_log_helper, event_name: AnalyticsConstants::PHYSICAL_COMPUTING_PAGE_VISITED_EVENT
