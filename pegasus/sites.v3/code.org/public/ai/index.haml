---
title: Learn about Artificial Intelligence (AI)
theme: responsive_full_width
---

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/ai-styles.css", rel: "stylesheet"}

-# FontAwesome icons
- icon_sparkles = "fa-solid fa-sparkles"
- icon_lightbulb = "fa-solid fa-lightbulb"
- icon_magnifying_glass = "fa-solid fa-magnifying-glass"
- icon_book = "fa-solid fa-book"
- icon_person_chalkboard = "fa-solid fa-person-chalkboard"
- icon_video = "fa-solid fa-video"
- icon_megaphone = "fa-solid fa-megaphone"

%section.hero-banner-basic.bg-neutral-dark{style: "display: block !important"}
  .wrapper
    .text-wrapper.col-60
      %h1{style: "color: white"}=hoc_s(:ai_hero_heading)
      %p.body-one{style: "color: white"}=hoc_s(:ai_hero_desc)
      %a.link-button.has-icon{href: "#ai-pl-callout"}
        %div.flex-wrapper
          %i{class: "#{icon_megaphone}"}
          =hoc_s(:call_to_action_learning_opportunity)
    %figure.col-33{style: "float: right"}
      %img.fade-in-out{src: "/images/banners/ai-bot-wizard.svg", alt: "", style: "z-index: 10"}
      %img{src: "/images/banners/ai-bot-default.svg", alt: "", style: "position: relative;"}
    .clear

= view :teach_ai_skinny_banner

%section.intro
  .wrapper
    %h2=hoc_s(:ai_intro_heading)
    %figure.video.col-50{style: "margin-top: 22px;"}
      = view :ai_vid_whyaimatters
      %figcaption
        %a{href: "#ai-videos"}=hoc_s(:ai_intro_video_caption_link)
    %div.flex-container.col-45{style: "float: right"}
      %ul.icon-bullet-list.full-width{style: "margin-top: 0"}
        %li
          %div
            %i{class: "#{icon_sparkles}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_01)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_01)
        %li
          %div
            %i{class: "#{icon_lightbulb}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_02)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_02)
        %li.no-margin-bottom
          %div
            %i{class: "#{icon_magnifying_glass}"}
          .text-wrapper
            %h3=hoc_s(:ai_intro_list_title_03)
            %p.no-margin-bottom=hoc_s(:ai_intro_list_desc_03)
    .clear


%section.bg-primary-light.blog-post-callout{id: "ai-pl-callout"}
  .wrapper
    %i{class: "#{icon_megaphone}"}
    .text-wrapper
      %h2.heading-lg=hoc_s(:ai_pl_callout_title)
      %p
        %strong=hoc_s(:ai_pl_callout_desc_01)
      %p.body-three=hoc_s(:ai_pl_callout_desc_02)
      %a.link-button{href: "/ai/pl/101"}=hoc_s(:signup_submit_explore)

%section.bg-neutral-light
  .wrapper
    %h2=hoc_s(:ai_why_heading)
    %p=hoc_s(:ai_why_desc)
    %ul.link-list
      %li
        %i{class: "#{icon_book}"}
        %a{href:"#ai-curricula"}=hoc_s(:ai_why_link_01)
      %li
        %i{class: "#{icon_person_chalkboard}"}
        %a{href:"#ai-pl"}=hoc_s(:ai_why_link_02)
      %li
        %i{class: "#{icon_video}"}
        %a{href:"#ai-videos"}=hoc_s(:ai_why_link_03)

%section{id: "ai-curricula"}
  .wrapper
    %h2=hoc_s(:ai_curricula_heading)
    %p=hoc_s(:ai_curricula_desc)
    .action-block__wrapper.action-block__wrapper--three-col
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %p.overline=hoc_s(:ai_curriculum_grades_01)
          %h3=hoc_s(:ai_curriculum_title_01)
          %img{src: "/images/ai/ai-curriclum-machine-learning.png", alt: ""}
          %p=hoc_s(:ai_curriculum_desc_01)
          %p=hoc_s(:ai_curriculum_duration_01)
        .content-footer
          %a{href: CDO.studio_url("/s/aiml"), class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_01)}}
            =hoc_s(:call_to_action_explore_unit)
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %p.overline=hoc_s(:ai_curriculum_grades_02)
          %h3=hoc_s(:ai_curriculum_title_02)
          %img{src: "/images/ai/ai-curriclum-ethics.png", alt: ""}
          %p=hoc_s(:ai_curriculum_desc_02)
          %p=hoc_s(:ai_curriculum_duration_02)
        .content-footer
          %a{href: CDO.studio_url("/s/ai-ethics-2021/lessons/1"), class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_02)}}
            =hoc_s(:call_to_action_view_lesson_plan)
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %p.overline=hoc_s(:ai_curriculum_grades_03)
          %h3=hoc_s(:ai_curriculum_title_03)
          %img{src: "/images/ai/ai-curriclum-oceans.png", alt: ""}
          %p=hoc_s(:ai_curriculum_desc_03)
          %p=hoc_s(:ai_curriculum_duration_03)
        .content-footer
          %a{href: CDO.studio_url("/s/oceans"), class: "link-button", aria:{label: hoc_s(:ai_curriculum_btn_aria_label_03)}}
            =hoc_s(:call_to_action_try_activity)

%section.bg-neutral-light
  .wrapper
    %h2=hoc_s(:ai_carousel_heading)
    .quotes-wrapper
      = view :ai_carousel

%section{id: "ai-pl"}
  .wrapper
    %h2=hoc_s(:ai_pl_heading)
    .action-block.action-block--two-col
      .text-wrapper.col-50
        %h3.heading-sm=hoc_s(:ai_pl_subheading)
        %ul{style: "margin-top: 1.5em;"}
          %li=hoc_s(:ai_pl_list_01)
          %li=hoc_s(:ai_pl_list_02)
          %li=hoc_s(:ai_pl_list_03)
          %li=hoc_s(:ai_pl_list_04)
          %li=hoc_s(:ai_pl_list_05)
        %a{href: CDO.studio_url("/courses/self-paced-pl-aiml-2023"), class: "link-button"}
          =hoc_s(:call_to_action_self_paced_pl)
      %img{src: "/images/ai/ai-professional-learning.png", alt: "", class: "col-50"}
    .clear

= view :section_divider_line

%section{id: "ai-videos"}
  .wrapper
    %h2=hoc_s(:ai_video_series_title)
    %p=hoc_s(:ai_video_series_desc)
    .video-series
      = view :ai_vid_intro
      -# = view :ai_vid_chatbots
      -# = view :ai_vid_creativity
      = view :ai_vid_mlintro
      = view :ai_vid_trainingdata
      = view :ai_vid_neuralnetworks
      = view :ai_vid_computervision
      = view :ai_vid_ethics1
      = view :ai_vid_ethics2

= view :section_divider_line

%section
  .wrapper
    %h2=hoc_s(:ai_resources_heading)
    %p=hoc_s(:ai_resources_desc)
    .action-block__wrapper.action-block__wrapper--three-col
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %h3=hoc_s(:ai_resources_title_01)
          %img{src: "/images/ai//ai-resources-ethics-panel.png", alt: ""}
          %p=hoc_s(:ai_resources_desc_01)
        .content-footer
          %a{href: "https://youtu.be/3oqxjPXbynE", class: "link-button", target: "_blank", rel: "noopener noreferrer", aria:{label: hoc_s(:ai_resources_btn_aria_label_01)}}
            =hoc_s(:call_to_action_watch_panel)
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %h3=hoc_s(:ai_resources_title_02)
          %img{src: "/images/ai/ai-resources-imagine-cup.png", alt: ""}
          %p=hoc_s(:ai_resources_desc_02)
        .content-footer
          %a{href: "https://imaginecup.microsoft.com/en-us/junior", class: "link-button", target: "_blank", rel: "noopener noreferrer", aria:{label: hoc_s(:ai_resources_btn_aria_label_02)}}
            =hoc_s(:call_to_action_learn_about_challenge)
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %h3=hoc_s(:ai_resources_title_03)
          %img{src: "/images/ai/ai-resources-for-teachers.png", alt: ""}
          %p=hoc_s(:ai_resources_desc_03)
        .content-footer
          %a{href: "https://aiforteachers.org/", class: "link-button", target: "_blank", rel: "noopener noreferrer", aria:{label: hoc_s(:ai_resources_btn_aria_label_03)}}
            =hoc_s(:call_to_action_explore_website)

= view :section_divider_line

%section
  .wrapper
    = view :ai_microsoft_block

= view :visit_partial_event_logger
