---
title: Learn Computer Science
theme: responsive_full_width
---

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}

%section
  .wrapper
    %h1=hoc_s(:heading_anyone_can_learn)
    %p.body-one.no-margin-bottom
      =hoc_s(:student_courses_top_desc)
    - if !current_user
      %a.link-button{href: CDO.studio_url("/users/sign_up"), style: "margin-top: 2rem"}
        =hoc_s(:call_to_action_sign_up_free)

= view :section_divider_line

%section
  .wrapper
    %h2=hoc_s(:heading_find_right_opportunity)
    %p.body-two
      =hoc_s(:student_courses_explore_desc)
    .action-block__wrapper.action-block__wrapper--two-col
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %p.overline
            =hoc_s(:module_label_grades)
            =hoc_s(:module_grade_k_5)
          %h3=hoc_s(:elemeentary_page_main_title)
          %img{src: "/images/courses-art-k-5.png", alt: ""}
          %p=hoc_s(:student_courses_k_5_desc)
        .content-footer
          %a.link-button{href: "/student/elementary"}
            =hoc_s(:call_to_action_explore_learning_ages_5_11)
      .action-block.action-block--one-col.flex-space-between
        .content-wrapper
          %p.overline
            =hoc_s(:module_label_grades)
            =hoc_s(:module_grade_6_12_plus)
          %h3=hoc_s(:middle_high_page_main_title)
          %img{src: "/images/courses-6-12.png", alt: ""}
          %p=hoc_s(:student_courses_6_12_desc)
        .content-footer
          %a.link-button{href: "/student/middle-high"}
            =hoc_s(:call_to_action_explore_learning_ages_11_plus)
