---
title: How to help
theme: responsive_full_width
---

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/page/help-styles.css", rel: "stylesheet"}

%section
  .wrapper
    %h1=hoc_s(:help_page_top_heading)
    %p.body-one
      =hoc_s(:help_page_top_desc)
    %div.content-wrapper.flex-container.justify-space-between.align-items-center.wrap-reverse{style: "margin-top: 4rem"}
      %figure.col-45
        %img.rounded-corners{src: "/images/help-page-top.png", alt: "", style: "position: relative; width: 100%;"}
      .text-wrapper.col-50
        %h2=hoc_s(:help_page_top_subhead)
        %p=hoc_s(:help_page_top_desc_02)
        .button-wrapper{style: "margin-bottom: 1rem"}
          %a.link-button{href: "https://donate.code.org/campaign/support-computer-science-education/c172233", target: "_blank", rel: "noopener noreferrer"}
            =hoc_s(:call_to_action_make_a_donation)
          %a.link-button.secondary{href: "donate"}
            =hoc_s(:call_to_action_other_ways_to_give)

%section.bg-neutral-light
  .wrapper.centered
    %h2=hoc_s(:help_page_partners_heading)
    %p=hoc_s(:help_page_partners_desc)
    .button-wrapper.flex-container.justify-center
      %a.link-button{href: "/educate/regional-partner"}
        =hoc_s(:call_to_action_become_partner_usa)
      %a.link-button{href: "/international/apply"}
        =hoc_s(:call_to_action_become_partner_intl)

%section
  .wrapper
    %div.flex-wrapper.justify-space-between.wrap
      .content-wrapper.col-45
        %img.rounded-corners{src: "/images/help-page-volunteer.png", alt: "", style: "width: 100%; margin-bottom: 1.5rem"}
        %h2=hoc_s(:help_page_volunteer_heading)
        %p=hoc_s(:help_page_volunteer_desc)
        %a.link-button{href: "/volunteer"}
          =hoc_s(:call_to_action_become_become_a_volunteer)
      .content-wrapper.col-45{style: "float: right"}
        %img.rounded-corners{src: "/images/help-page-translate.png", alt: "", style: "width: 100%; margin-bottom: 1.5rem"}
        %h2=hoc_s(:help_page_translate_heading)
        %p=hoc_s(:help_page_volunteer_desc)
        %a.link-button{href: "/translate"}
          =hoc_s(:call_to_action_become_start_translating)
