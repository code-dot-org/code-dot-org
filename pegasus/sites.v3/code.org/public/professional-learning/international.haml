---
theme: responsive_full_width
---

:ruby
  @header["title"] = hoc_s("intl_pl_page.page_title")

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/page/international-pl-styles.css", rel: "stylesheet"}

%section.hero-banner-basic
  .wrapper.flex-container.justify-space-between.align-items-center.wrap
    .text-wrapper
      %h1.white
        =hoc_s("intl_pl_page.heading")
      %p.body-one.white
        =hoc_s("intl_pl_page.desc")
    %figure
      %img{src: "/images/banners/intl-pl-globe.png", alt: ""}
    .clear

%section
  .wrapper
    %figure.col-50{style: "margin: .5rem 0 1rem;"}
      %img.rounded-corners{src: "/images/intl-pl-page-intro.png", alt: "", style: "width: 100%;"}
    .text-wrapper.col-45{style: "float: right;"}
      %h2=hoc_s("intl_pl_page.intro.heading")
      %p=hoc_s("intl_pl_page.intro.desc")
      %ul
        %li=hoc_s("intl_pl_page.intro.list_01")
        %li=hoc_s("intl_pl_page.intro.list_02")
      %a.link-button{href: "/educate/professional-development-online"}
        =hoc_s("intl_pl_page.intro.button")
  .clear

%section.bg-neutral-light
  .wrapper.centered
    %h2=hoc_s("intl_pl_page.partners.heading")
    %p=hoc_s("intl_pl_page.partners.desc")
    %a.link-button{href: "/professional-learning/international-partners"}
      =hoc_s("intl_pl_page.partners.button")

%section
  .wrapper.centered
    %h2=hoc_s("intl_pl_page.resources.heading")
    = view :"professional_learning/intl_pl_resources"

%section.bg-pattern-dark
  .wrapper
    = view :"professional_learning/intl_pl_subscribe_form"

%section
  .wrapper
    %h2=hoc_s("intl_pl_page.contact.heading")
    .action-block.action-block--two-col
      .media-wrapper.col-50
        %img{src: "/images/teach-page-students.png", alt: ""}
      .text-wrapper.col-50
        %h3.heading-xs
          =hoc_s("intl_pl_page.contact.subheading")
        %p.body-two
          =hoc_s("intl_pl_page.contact.desc")
        %p
          %strong
            =hoc_s("intl_pl_page.contact.cta", markdown: :inline, locals: {email_url: "mailto:team-global@code.org"})

= view :analytics_event_log_helper, event_name: AnalyticsConstants::INTL_PL_PAGE_VISIT_EVENT
