%section.bg-neutral-light
  .wrapper.centered
    %h2=hoc_s("intl_pl_page.resources.heading")
    = view :"professional_learning/intl_pl_resources"

%section.bg-pattern-dark
  .wrapper
    = view :"professional_learning/intl_pl_subscribe_form"

%section.ng-neutral-light
  .wrapper
    %h2=hoc_s("intl_pl_page.contact.heading")
    .action-block.action-block--two-col
      .media-wrapper.col-50
        %img{src: "/images/teach-page-students.png", alt: ""}
      .text-wrapper.col-50
        %h3.heading-xs
          =hoc_s("intl_pl_page.contact.subheading")
        %p.body-two
          =hoc_s("intl_pl_page.contact.desc")
        %p
          %strong
            =hoc_s("intl_pl_page.contact.cta", markdown: :inline, locals: {email_url: "mailto:international@code.org"})
