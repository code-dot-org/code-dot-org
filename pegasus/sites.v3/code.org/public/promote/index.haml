:javascript
  var petitionIncluded = false;

-state ||= nil

%script{:src=>"/js/jquery.placeholder.js"}

#promote-page
  %h1{:style=>'margin-bottom:15px;'} Promote Computer Science

  %div{:id=>'us_content'}

    - if request.locale == 'en-US'
      %div{style: "background-color:#f3f3f3; border-radius:4px; padding:20px; clear:both"}
        %h3{style: "margin-top: 0px"} Every student in every school should have the opportunity to learn computer science. Join over 100,000 Americans&mdash;including CEOs, governors, and education leaders&mdash;to ask Congress to fund computer science in grades K-12.
        %a{:href=>'http://bit.ly/computersciencepetition', target: '_blank'}
          %button Sign the petition
      %br/
    - else
      #petition-section.section.clear
        = view :petition
      :javascript
        petitionIncluded = true;

    #interactive-map.section.clear
      %h2{:style=>"margin-top: 0px"} Choose a State
      = view :interactive_map, use_url: true

    #stats-section.section.clear
      %h2 Whatâ€™s wrong with this picture? Share these stats.
      = view :stats_carousel

    #tools-section.section.clear
      %h2 Tools to help you advocate locally
      = view :promote_tools, state:nil

  %div{:id=>'universal_content'}
    #youtube-section.section.clear
      %h2{:style=>'margin-top: 0px'} Tell the world! Share the Code.org video.
      = view :youtube_videos

      #stateaction{:style=>'padding-left:30px'}
        %a{:href=>"/action"} See where computer science counts towards high school graduation

    #quotes-section.section.clear
      %h2 Leaders and trendsetters agree more students should learn computer science
      = view :top_quotes

= view 'popup_window.js'

:javascript
  var petition;

  $(document).ready()
  {
    if (petitionIncluded) {
      petition = new Petition();
    }
  }
