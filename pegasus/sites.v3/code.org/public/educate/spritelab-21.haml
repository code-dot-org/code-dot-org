%link{href: "/css/tools.css", rel: "stylesheet"}
%link{href: "/shared/css/course-blocks.css", rel: "stylesheet"}
%link{href: "/css/highlights.css", rel: "stylesheet"}

.tools-banner
  .tools-img-box
    %img.tools-img.tools-img-gamelab{src: CDO.code_org_url("/shared/images/courses/logo_gamelab_square.png")}
  .tools-info.green{style: "max-width: 748px;"}
    .tools-title-bar.green
      %h1.tools-title Sprite Lab
    .tools-description
      %p Sprite Lab is a block-based programming environment where you can make simple animations and games with objects and characters that interact with each other. Create an animation or game then share your app in seconds.
      .tools-details Ages 10+, all modern browsers, English only
      %a{href: CDO.studio_url("/projects/spritelab/new")}
        %button Make an animation or game

.clear


#challenges
  %h1 Sample Projects
  %h2 Explore these sample projects or change the code to make them your own.
  .highlights-content
    - cta = "Remix the project"
    = view :highlight_item, item: {image: "spritelab/rikki", title: "About Me", desc: "Click the sprites to learn more about me.", cta: cta, url: 'https://studio.code.org/s/coursef-2021/lessons/4/levels/1'}
    = view :highlight_item, item: {image: "spritelab/pet", title: "Virtual Pet", desc: "Drag the food or the toy to the pet and watch the sprites interact.", cta: cta, url: 'https://studio.code.org/s/coursef-2021/lessons/4/levels/1'}
    = view :highlight_item, item: {image: "spritelab/birthday", title: "Greeting Card", desc: "Enter your name and age to get a personalized greeting.", cta: cta, url: 'https://studio.code.org/s/coursef-2021/lessons/8/levels/2/sublevel/1'}
    = view :highlight_item, item: {image: "spritelab/sky", title: "Sky Dancer", desc: "Collect the coins. Avoid the clouds.", cta: cta, url: 'https://studio.code.org/s/coursef-2021/lessons/20/levels/1/sublevel/2'}
  .clear

