---
title: Computer Science Fundamentals
theme: responsive_full_width
---

%link{href: '/css/generated/design-system-pegasus.css', rel: 'stylesheet'}
%link{href: "/css/generated/csf-styles.css", rel: "stylesheet"}

%section.hero-banner-basic.overlay
  .wrapper.flex-container.justify-space-between.align-items-center.wrap
    .text-wrapper
      %h1{style: "color: white"}
        =hoc_s(:curriculum_name_csf)
      %p{style: "color: white"}
        =hoc_s(:csf_page_top_desc)
      %a.link-button{href: "#"}
        =hoc_s(:call_to_action_explore_courses)
    %figure
      %img{src: "/images/banners/banner-csp-phone-icon.png", alt: ""}
    .clear

%section
  .wrapper
    %div.col-50{style: "margin-bottom: 1rem;"}
      = view :display_video_thumbnail, id: "intro_csf", video_code: "rNIM1fzJ8u0", play_button: 'center', letterbox: 'false', download_path: "//videos.code.org/curriculum_videos/curriculum_video_csf.mp4"
    .text-wrapper.col-45{style: "float: right;"}
      %h2=hoc_s(:csf_page_intro_heading)
      %ul
        %li=hoc_s(:csf_page_intro_list_01)
        %li=hoc_s(:csf_page_intro_list_02)
        %li=hoc_s(:csf_page_intro_list_03)
        %li=hoc_s(:csf_page_intro_list_04)
      %a.link-button{href: "#"}
        =hoc_s(:call_to_action_explore_courses)
    .clear

%section.bg-neutral-light
  .wrapper
    = view :curriculum_glance_section, heading: hoc_s(:heading_curriculum_at_a_glance), grades: hoc_s(:module_grade_k_5), duration: hoc_s(:module_duration_month_quarter), level: hoc_s(:module_level_beginner), tools: hoc_s(:csf_page_curriculum_glance_tools), devices: hoc_s(:csf_page_curriculum_glance_devices), professional_learning: hoc_s(:csf_page_curriculum_glance_professional_learning), topics: hoc_s(:csf_page_curriculum_glance_topics), accessibility_features: hoc_s(:csf_page_curriculum_glance_accessibility_features), languages: hoc_s(:csf_page_curriculum_glance_languages)

%section.quote.bg-neutral-dark
  .wrapper
    %div.quotes-wrapper
      %p.quote-text.large
        =hoc_s(:csf_page_quote)
      %p.no-margin-bottom
        =hoc_s(:teacher_label_csf)

%section.bg-neutral-light
  .wrapper
    = view :resources_tabs

%section
  .wrapper
    = view :curriculum_pages_pl_section, facilitator_desc: hoc_s(:professional_learning_section_block_facilitator_led_workshops_csf), apply_url: "/professional-development-workshops", modules_url: CDO.studio_url("/s/k5-onlinepd-2023")

= view :section_divider_line

%section.no-padding-bottom
  .wrapper
    %h2=hoc_s(:heading_faq)
    = view :faq_csf

%section
  .wrapper
    = view :support_and_questions_section

= view :analytics_event_log_helper, event_name: AnalyticsConstants::CSF_CURRICULUM_PAGE_VISITED_EVENT
