  - cspunit3_videos << { id: 'conditionals_2', category_title: '', caption: 'Create conditions with if/else statements to make your app more unique.', code: 'UDi7xgIIW8E', download_path: '//videos.code.org/2015/csp/applab/conditionals_2.mp4', studio_stage: '/s/cspunit3/stage/18/puzzle/1'}
