---
title: Computer Science Principles
theme: responsive_full_width
---

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/csp-styles.css", rel: "stylesheet"}

%section.hero-banner-basic.overlay
  .wrapper.flex-container.justify-space-between.align-items-center.wrap
    .text-wrapper
      %h1.white
        =hoc_s(:curriculum_name_csp)
      %p.white
        =hoc_s(:csp_page_top_desc)
      %a.link-button.white{href: CDO.studio_url("/courses/csp?viewAs=Instructor")}
        =hoc_s(:call_to_action_explore_course)
    %figure
      %img{src: "/images/banners/banner-csp-phone-icon.png", alt: ""}
    .clear

%section
  .wrapper
    %div.col-50{style: "margin-bottom: 1rem;"}
      = view :display_video_thumbnail, id: "intro_csp", video_code: "DMr1iFYacGQ", play_button: 'center', letterbox: 'false', download_path: "//videos.code.org/curriculum_videos/curriculum_video_csp.mp4"
    .text-wrapper.col-45{style: "float: right;"}
      %h2=hoc_s(:csp_page_intro_heading)
      %ul
        %li=hoc_s(:csp_page_intro_list_01)
        %li=hoc_s(:csp_page_intro_list_02)
        %li=hoc_s(:csp_page_intro_list_03)
        %li=hoc_s(:csp_page_intro_list_04)
      %a.link-button{href: CDO.studio_url("/courses/csp?viewAs=Instructor")}
        =hoc_s(:call_to_action_explore_course)
    .clear

= view :professional_learning_skinny_banner

%section.bg-neutral-light
  .wrapper
    = view :curriculum_glance_section, heading: hoc_s(:heading_curriculum_at_a_glance), grades: hoc_s(:module_grade_9_12), duration: hoc_s(:module_duration_school_year), level: hoc_s(:module_level_beginner), tools: hoc_s(:csp_page_curriculum_glance_tools), devices: hoc_s(:csp_page_curriculum_glance_devices), professional_learning: hoc_s(:csp_page_curriculum_glance_professional_learning), topics: hoc_s(:csp_page_curriculum_glance_topics), accessibility_features: hoc_s(:csp_page_curriculum_glance_professional_accessibility_features), languages: hoc_s(:csp_page_curriculum_glance_professional_languages)

%section.quote.bg-neutral-dark
  .wrapper
    %div.quotes-wrapper
      %p.quote-text.large
        =hoc_s(:csp_page_quote)
      %p.no-margin-bottom
        Jennifer Douglass
        %span â€¢
        =hoc_s(:teacher_label_csp)

%section
  .wrapper
    %h2=hoc_s(:heading_engaging_projects)
    = view :projects_csp_page

%section.bg-neutral-light
  .wrapper
    = view :"tabs_section/resources/resources_tabs", resources_heading: hoc_s(:resources_tabs_heading), resources_desc: hoc_s(:resources_tabs_desc, markdown: :inline, locals: {sign_up_url: CDO.studio_url("/users/sign_up")})

%section
  .wrapper
    = view :curriculum_pages_pl_section, facilitator_desc: hoc_s(:professional_learning_section_block_facilitator_led_workshops), apply_url: "/apply", modules_url: CDO.studio_url("/courses/self-paced-pl-csp")

= view :section_divider_line

%section.no-padding-bottom
  .wrapper
    %h2=hoc_s(:heading_faq)
    = view :faq_csp

%section
  .wrapper
    = view :support_and_questions_section

%section#csp-newsletter-signup{style: "padding-top: 2rem"}
  .wrapper
    = view :subscribe_form, subscribe_form_section_title: hoc_s(:subscribe_form_section_title), subscribe_form_section_desc: hoc_s(:subscribe_form_section_desc_csp), form_height: "375px", form_src: "http://go.pardot.com/l/153401/2017-08-24/jjjm14"

= view :analytics_event_log_helper, event_name: AnalyticsConstants::CSP_CURRICULUM_PAGE_VISITED_EVENT
