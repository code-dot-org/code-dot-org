---
theme: responsive_full_width
---

:ruby
  @header["title"] = hoc_s("app_lab_page.heading")

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}

%section
  .wrapper
    .text-wrapper.col-50
      %h1=hoc_s("app_lab_page.heading")
      %p.body-one
        =hoc_s("app_lab_page.subheading")
      %p.body-two
        =hoc_s("app_lab_page.top.desc")
      %a.link-button{href: CDO.studio_url("/projects/applab/new")}
        =hoc_s("app_lab_page.top.button")
    %figure.col-45{style: "float: right; margin-top: 1.25rem;"}
      = view :display_video_thumbnail, id: "app_lab_in_classroom", video_code: "e1St8LB4VJA", play_button: 'center', letterbox: 'false', download_path: "//videos.code.org/applab/in-the-classroom.mp4"
    .clear

%section.bg-neutral-light
  .wrapper.centered
    %h2=hoc_s("app_lab_page.glance.heading")
    = view :"tools/tools_glance", ages: hoc_s("app_lab_page.glance.ages"), level: hoc_s("app_lab_page.glance.level"), make: hoc_s("app_lab_page.glance.make"), devices: hoc_s("app_lab_page.glance.devices"), browsers: hoc_s("app_lab_page.glance.browsers"), languages: hoc_s("app_lab_page.glance.languages"), accessibility: hoc_s("app_lab_page.glance.accessibility")
    %p.body-two
      =hoc_s("app_lab_page.glance.documentation_desc")
    %a.link-button.secondary{href: CDO.studio_url("/docs/ide/applab")}
      =hoc_s("tools_pages_shared.glance.button")

%section
  .wrapper
    %h2=hoc_s("app_lab_page.projects.heading")
    %p=hoc_s("app_lab_page.projects.desc")
    = view :"tools/app_lab/app_lab_projects"
    .dashed-box{style: "margin-top: 2rem"}
      .text-wrapper
        %h3.heading-sm
          =hoc_s("app_lab_page.projects.build.heading")
        %p.no-margin-bottom
          =hoc_s("app_lab_page.projects.build.desc")
      .button-wrapper
        %a.link-button{href: CDO.studio_url("/projects/applab/new")}
          =hoc_s("app_lab_page.projects.build.button")

%section.bg-neutral-light
  .wrapper
    %h2.centered
      =hoc_s("app_lab_page.lessons.heading")
    %p.centered
      =hoc_s("app_lab_page.lessons.desc")
    = view :"tools/app_lab/app_lab_lessons"

%section
  .wrapper
    %h2.centered
      =hoc_s("app_lab_page.videos.heading")
    = view :"tools/app_lab/app_lab_videos"

= view :swiper_page_applab
