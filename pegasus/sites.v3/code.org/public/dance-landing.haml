%h1= I18n.t(:dance_main_heading)

.dance-subheading
  %h4= I18n.t(:dance_subheading)

%link{href: "/css/starwars.css", rel: "stylesheet"}
%link{href: "/css/dance-landing.css", rel: "stylesheet"}

%div{style: "clear:both"}

.starwars-container
  .img-container
    -# %img.starwars-img{src:"/images/fit-1940/sw_landingpage.jpg"}
  %h1.starwars-heading= I18n.t(:starwars_subtitle)

  .col-25.starwars-tutorial.starwars-js-tutorial
    .tutorial-box
      %h2.sw-h2= I18n.t(:dance_party_title)
      .sw-tutorial-info
        %p.sw-tutorial-description= I18n.t(:dance_party_description)
        %p.sw-tutorial-specs= I18n.t(:dance_party_specs)
      %a{:href => '/api/hour/begin/starwars', :target=>'_self'}
        %button.sw-try-button= I18n.t(:try_now)

  .col-25.starwars-tutorial.starwars-blocks-tutorial
    .tutorial-box
      %h2.sw-h2= I18n.t(:dance_try_a_second_hour_title)
      .sw-tutorial-info
        %p.sw-tutorial-description= I18n.t(:dance_try_a_second_hour_description)
        %p.sw-tutorial-specs= I18n.t(:dance_try_a_second_hour_specs)
      %a{:href => '/api/hour/begin/starwarsblocks', :target=>'_self'}
        %button.sw-try-button= I18n.t(:try_now)

%div{style: "clear:both"}
