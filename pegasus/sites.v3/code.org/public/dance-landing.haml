%h1= I18n.t(:hoc2018_dance_party_main_heading)

.dance-subheading
  %h4= I18n.t(:hoc2018_dance_party_subheading)

%link{href: "/css/dance-landing.css", rel: "stylesheet"}

%div{style: "clear:both"}

.dance-container
  .img-container
    %img.dance-img{src:"/shared/images/fit-150/hadi_partovi.jpg"}
  %h1.dance-heading= I18n.t(:hoc2018_dance_create_your_own_dance_title)

  .col-25.dance-tutorial.dance-blocks-tutorial
    .tutorial-box
      %h2.dance-h2= I18n.t(:hoc2018_dance_party_box_title)
      .dance-tutorial-info
        %p.dance-tutorial-description= I18n.t(:hoc2018_dance_party_box_description)
        %p.dance-tutorial-specs= I18n.t(:hoc2018_dance_party_specs)
      %a{:href => '/api/hour/begin/starwarsblocks', :target=>'_self'}
        %button.dance-try-button= I18n.t(:hoc2018_dance_party_button)

  .col-25.dance-tutorial.dance-js-tutorial
    .tutorial-box
      %h2.dance-h2= I18n.t(:hoc2018_dance_keep_on_dancing_box_title)
      .dance-tutorial-info
        %p.dance-tutorial-description= I18n.t(:hoc2018_dance_keep_on_dancing_description)
        %p.dance-tutorial-specs= I18n.t(:hoc2018_dance_keep_on_dancing_specs)
      %a{:href => '/api/hour/begin/starwars', :target=>'_self'}
        %button.dance-try-button= I18n.t(:hoc2019_dance_keep_on_dancing_button)

%div{style: "clear:both"}
