    cookie.parse(req.http.Cookie);
  }
  # Filter https-related cookies from incoming request
  if (cookie.isset("https_ok")) {
    cookie.delete("https_ok");
    set req.http.X-Https-Ok = "1";
  }
  if (cookie.isset("https-blocked")) {
    cookie.delete("https-blocked");
    set req.http.X-Https-Blocked = "1";
  }

  # Redirect http to https if 'https_ok' cookie is set
  if(req.http.X-Forwarded-Proto !~ "(?i)https") {
    if(req.http.X-Https-Ok == "1") {
      error 751 "https://" + req.http.host + req.url;
