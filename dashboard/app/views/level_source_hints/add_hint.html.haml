%div
  %h1 What hint would you like to give in order to improve this program?
  = render partial: "shared/add_hint", locals: { level_source_id: @level_source_id, redirect_url: build_add_hint_path(params[:idx].to_i + 1, params[:pop_level_source_ids]) }
  %table{:width => "30%"}
    %tr
      %td= link_to "<< Prev", build_add_hint_path(params[:idx].to_i - 1, params[:pop_level_source_ids])
      %td= link_to "Next >>", build_add_hint_path(params[:idx].to_i + 1, params[:pop_level_source_ids])

%br
%iframe{src: level_source_path(@level_source, hint_embed: 1), style: 'width: 100%; height: 1000px;'}

:javascript
  $( "#hint_content" ).placeholder();
