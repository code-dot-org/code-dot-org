%div.row
  %div.span6
    %h2
      Workshop Details
%div.row
  %div.span2{style: 'text-align: right'}
    %strong
      = @workshop.sessions.count == 1 ? 'Date:' : 'Dates:'
  %div.span4
    - @workshop.sessions.each do |session|
      = session.formatted_date_with_start_and_end_times
      %br
%div.row
  %div.span2{style: 'text-align: right'}
    %strong
      Location:
  %div.span2
    = @workshop.location_name
    %br
    = @workshop.location_address

%div.row
  %div.span2{style: 'text-align: right'}
    %strong
      Course:
  %div.span2
    - if @workshop.course_target
      = link_to @workshop.course, @workshop.course_target
    - else
      = @workshop.course

    - if @workshop.subject
      = "(#{@workshop.subject})"

- if @workshop.regional_partner
  %div.row
    %div.span2{style: 'text-align: right'}
      %strong
        Regional Partner:
    %div.span2
      = @workshop.regional_partner.name

%div.row
  %div.span2{style: 'text-align: right'}
    %strong
      Organizer Name:
  %div.span2
    = @workshop.organizer.name
%div.row
  %div.span2{style: 'text-align: right'}
    %strong
      Organizer Email:
  %div.span4
    = @workshop.organizer.email

  %div.span6
    %p{style: 'white-space: pre-wrap'}
      = @workshop.notes
