%head
  %title Parent Letter

  :css
    body {
      max-width: 8.5in;
      font-family: 'Metropolis', sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 13px;
      line-height: 18px;
    }
    h1 {
      font-family: 'Metropolis', sans-serif;
      font-weight: 700;
      font-style: normal;
      font-size: 18px;
      line-height: 24px;
      margin: 10px 0 0 0;
      color: #8c52ba;
    }

  -# These files are all prerequisites for running a code studio webpack bundle
  %script{src: webpack_asset_path('js/webpack-runtime.js'), 'data-ot-ignore' => ''}
  -# This file is generated by Webpack's SplitChunksPlugin,
  -# which we only use when optimizing our webpack build (ie, non-development environments).
  - if CDO.optimize_webpack_assets
    %script{src: webpack_asset_path('js/vendors.js'), 'data-ot-ignore' => ''}
  %script{src: webpack_asset_path('js/essential.js'), 'data-ot-ignore' => ''}
  = javascript_include_tag 'application'
  %script{src: webpack_asset_path("js/#{js_locale}/common_locale.js"), 'data-ot-ignore' => ''}
  -# This file is generated by Webpack's SplitChunksPlugin,
  -# which we only use when optimizing our webpack build (ie, non-development environments).
  - if CDO.optimize_webpack_assets
    %script{src: webpack_asset_path('js/code-studio-common.js'), 'data-ot-ignore' => ''}

  :ruby
    script_data = {}
    script_data[:studioOrigin] = CDO.studio_url('', CDO.default_scheme)
    script_data[:sections] = @sections
    script_data[:section] = @section_summary
    script_data[:userName] = @current_user.short_name
    script_data[:localeCode] = request.locale
    script_data[:logoUrl] = asset_path('logo.png')
  %script{src: webpack_asset_path('js/teacher_dashboard/parent_letter.js'), data: {json: script_data.to_json}, 'data-ot-ignore' => ''}
