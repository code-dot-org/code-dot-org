    %script{src: webpack_asset_path('js/webpack-runtime.js')}
    %script{src: asset_path('js/bramble/thirdparty/require.min.js'), 'data-main': webpack_asset_path('js/brambleHost.js')}
    =# DEVMODE: %script{src: asset_path('http://127.0.0.1:8000/src/thirdparty/require.min.js'), 'data-main': webpack_asset_path('js/brambleHost.js')}
