!!! 5
- show_footer = !(@share && browser.mobile?) && !@embed
%html{dir: locale_dir}
  %head
    - # TODO OFFLINE
    %title= t(:appname) + (@page_title ? " - #{@page_title}" : "")
    = ::NewRelic::Agent.browser_timing_header rescue ''
    = tag :meta, name: 'viewport', content: 'minimal-ui'
    /[if IE 9]
      %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge'}
    = javascript_include_tag 'react'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag '//cdn.optimizely.com/js/400912536.js' if Rails.env.production?
    = csrf_meta_tags
    = yield :head
    = render partial: 'layouts/analytics'

  %body
    - # TODO OFFLINE
    - if current_user && params[:controller] !~ /^sessions/
      - if current_user.age.nil?
        = render partial: 'layouts/age_interstitial'
      :javascript
        window.user_info = {
          id: #{current_user.id},
          username: "#{h(current_user.short_name)}",
          age: "#{current_user.age}",
          admin: #{current_user.admin?},
          teacher: #{current_user.teacher?},
          student: #{current_user.student?},
          teacher_prize: "#{current_user.teacher_prize}",
          bonus_prize: "#{current_user.teacher_bonus_prize}",
          actions: {
            dashboard: "#{teacher_dashboard_url}",
            settings: "#{edit_user_registration_url}",
            prizes: "#{my_prizes_url}",
            signout: "#{destroy_user_session_url}"
          }
        };


    .wrapper{style: ('background-color: #ffffff' if @embed)}
      = render partial: 'layouts/header' if !(@embed)
      - page = yield
      - if @full_width
        .full_container{style: ('padding: 0px;' if @no_padding)}
          = page
      - else
        .container.main
          = show_flashes.html_safe
          = page
      - if show_footer
        .push

    - if show_footer
      = render partial: 'layouts/footer'

    = yield :body_scripts