%strong{:class => "code", :id => "message"} Hello,  #{@project.project_type}

%h2 Tables
%table
  %tr
    %td table_name
    %td columns
    %td is_shared_table
  - @tables.each do |table|
    %tr
      %td= table.table_name
      %td= table.columns
      %td= table.is_shared_table

%h2 Records

%table
  %tr
    %td table_name
    %td record_id
    %td record_json
  - @records.each do |record|
    %tr
      %td= record.table_name
      %td= record.record_id
      %td= record.record_json

%h2 Key Value Pairs

%table
  %tr
    %td key
    %td value
  - @key_value_pairs.each do |kvp|
    %tr
      %td= kvp.key
      %td= kvp.value

%h2 KeyValuePair

%h3 set_key_value
= form_tag "set_key_value", :method => :post, :remote => false do
  = text_field_tag "key", "", placeholder: "key"
  = text_field_tag "value", "", placeholder: "\"value\""
  = submit_tag "set_key_value"

