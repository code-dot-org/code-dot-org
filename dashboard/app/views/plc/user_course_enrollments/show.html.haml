- content_for(:head) do
  = stylesheet_link_tag 'css/levelbuilder', media: 'all'

%p Hello #{@user_course_enrollment.user.name}, here is your progress for #{@user_course_enrollment.plc_course.name}

.module_progress_grouping
  -@user_course_enrollment.plc_module_assignments.each do |module_enrollment|
    %p
      %strong #{module_enrollment.plc_learning_module.name}
      - module_enrollment.plc_task_assignments.each do |task_assignment|
        %li
          = link_to task_assignment.plc_task.name, plc_enrollment_task_assignment_path(task_assignment), class: task_assignment.status
          = ':'
          = task_assignment.status.titleize

  -if @user_course_enrollment.plc_module_assignments.empty?
    %p
      You have not taken the evaluation quiz. Once you have done so, we can enroll you in appropriate modules.
      = link_to 'Take evaluation quiz', perform_evaluation_path(@user_course_enrollment)


= link_to 'Back', plc_user_course_enrollments_path
