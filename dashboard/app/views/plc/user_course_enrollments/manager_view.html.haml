%h3 Details for #{@user_course_enrollment.user.name} enrollment in #{@user_course_enrollment.plc_course.name}

- @user_course_enrollment.plc_unit_assignments.each do |unit_assignment|
  %strong #{unit_assignment.plc_course_unit.unit_name}
  %br
  - unit_assignment.plc_module_assignments.each do |module_assignment|
    = 'Module: ' + module_assignment.plc_learning_module.name
    - module_assignment.plc_task_assignments.joins(:plc_task).where.not('plc_tasks.type': Plc::LearningResourceTask.name).each do |task_assignment|
      %br
        - icon, style = task_assignment.get_icon_and_style
        %i{class: 'fa ' + icon, style: style + '; margin-left: 10px'}
        = task_assignment.plc_task.name
    %br
  %br
