= form_for @plc_enrollment_unit_assignment do |f|
  - if @plc_enrollment_unit_assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plc_enrollment_unit_assignment.errors.count, "error")} prohibited this plc_enrollment_unit_assignment from being saved:"
      %ul
        - @plc_enrollment_unit_assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :plc_user_course_enrollment
    = f.text_field :plc_user_course_enrollment
  .field
    = f.label :plc_course_unit
    = f.text_field :plc_course_unit
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
