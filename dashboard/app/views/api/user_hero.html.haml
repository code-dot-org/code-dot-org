          %li Computer Science in Algebra
          %ul
            %li
              %a{href: script_path(Script.get_from_cache('Algebra'))} Computer Science in Algebra
            %li
              %a{href: script_path(Script.get_from_cache('AlgebraA'))} Computer Science in Algebra: Course A
            %li
