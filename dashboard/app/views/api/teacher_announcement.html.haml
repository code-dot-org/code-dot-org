- teacher_blog_url = "http://teacherblog.code.org"
- redesign_blog_url = "http://teacherblog.code.org/post/160703303174/coming-soon-access-your-top-resources-with-the"

.teacher-announce
  .announce-heading{style: 'height: 20px; box-sizing: content-box'}
    = t('home.announcement_title')
  #us-announcement{style: 'display: none;'}

    .announce-content
      %a.track-link{href: redesign_blog_url, target: '_blank', data: {id: 'redesign'}}
        .content-img-container
          = image_tag(CDO.shared_image_url('/teacher-announcement/redesign-bee.png'), width: '200px')
      .content-text
        != t('home.announcement_navigation_redesign')
      .announce-learn-more
        %a.track-link{href: redesign_blog_url, target: '_blank', data: {id: 'redesign'}}
          %button.primary= t('home.announcement_learn_more_button')

  #non-us-announcement{style: 'display: none;'}

    .announce-content
      %a.track-link{href: redesign_blog_url, target: '_blank', data: {id: 'redesign'}}
        .content-img-container
          = image_tag(CDO.shared_image_url('/teacher-announcement/redesign-bee.png'), width: '200px')
      .content-text
        != t('home.announcement_navigation_redesign')
      .announce-learn-more
        %a.track-link{href: redesign_blog_url, target: '_blank', data: {id: 'redesign'}}
          %button.primary= t('home.announcement_learn_more_button')

  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      != t('home.announcement_all', teacher_blog_url: teacher_blog_url)

#clearboth{style: 'clear: both;'}
