- cta_url = 'http://blog.code.org/post/147243645493/'
- csp_widgets_url = 'http://teacherblog.code.org/post/148059231974/explore-cs-concepts-in-any-classroom-with-these-4'

.teacher-announce
  .announce-heading{style: 'height: 20px;'}
    = t('home.announcement_title')
  .announce-content
    %a{href: cta_url, target: '_blank'}
      .content-img-container{style: 'margin: 15px 50px 0px 50px;'}
        = image_tag(CDO.shared_image_url('/teacher-announcement/privacy-policy.png'), width: '100px')
    .content-text
      != t('home.announcement_message')
    .announce-learn-more
      %a{href: cta_url, target: '_blank'}
        %button.primary= t('home.announcement_learn_more_button')
  .announce-content
    %a{href: csp_widgets_url, target: '_blank'}
      .content-img-container
        = image_tag(CDO.shared_image_url('/teacher-announcement/csp-widgets.png'), width: '200px')
    .content-text
      != t('home.announcement_csp_widgets_message')
    .announce-learn-more
      %a{href: csp_widgets_url, target: '_blank'}
        %button.primary= t('home.announcement_try_now_button')
  .mini-announcement
    .content-text
      %i.fa.fa-hand-o-right
      != t('home.announcement_all', teacher_blog_url: 'http://teacherblog.code.org/')

#clearboth{style: 'clear: both;'}
