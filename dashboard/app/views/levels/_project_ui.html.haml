.project-ui{style: 'display: none'}
  %span Project:
  %a#create-project.btn.btn-default{href: '#'} Create project
  %span#project-name
  %span#save-project
  %form#project-form{style: 'display: none'}
    Rename:
    %input#name{type: 'text'}
    %input{type: 'submit'}

%script{src: '/shared/js/apps_api.js'}

:javascript
  var apps = storageApps();
  var currentApp = null;

  var displayCurrentApp = function() {
    $('.project-ui').show();
    console.log(currentApp);
    $('#create-project').hide();
    $('#project-name').text(currentApp.name);
    $('#project-form input#name').val(currentApp.name);
    $('#project-form').show();
    $('#save-project').show();
  }

  var createApp = function(options) {
    var defaultOptions = {
      name: "Untitled",
      createdAt: new Date,
      updatedAt: new Date,
      levelId: appOptions.levelId, // TODO this is not actually a unique identifier for the level
      levelUrl: window.location.origin + window.location.pathname, // TODO this is hacky.. we should just have a /project url
    };

    $.extend(defaultOptions, options);

    apps.create(defaultOptions, function(app) {
      if (app) {
        currentApp = app;
        console.log("Created " + currentApp.createdAt);
        displayCurrentApp();
      } else {
        console.log("Failed to create.");
      }
    });
  }

  $(document).ready( function() {
    if (window.location.hash && window.location.hash.length > 1) {
      // try to load a project from the # param
      apps.fetch(window.location.hash.slice(1),
        function(data) {
          if (data) {
            currentApp = data;
            console.log("fetched");
            displayCurrentApp();
          } else {
            console.log('failed to fetch project ' + window.location.hash);
          }
        });
    }
  });

  $(document).bind('appInitialized', function() {
    if (appOptions && appOptions.level && appOptions.level.freePlay) {
      // TODO we only actually want this for standalone levels, not freeplay
      $('.project-ui').show();
    }

    if (!currentApp && // no project yet
        appOptions && appOptions.level && appOptions.level.projectTemplateLevelName) { // level wants us to find or create a project
      apps.all(function(data) {
        if (data) {
          var projects = $.grep(data,
              function(app) { return (app.projectTemplateLevelName && app.projectTemplateLevelName === appOptions.level.projectTemplateLevelName)});
          if (projects.length == 0) {
            createApp({projectTemplateLevelName: appOptions.level.projectTemplateLevelName,
                       name: appOptions.level.projectTemplateLevelName});
          } else {
            var app = projects[0];
            // TODO this should just load the code in the workspace, not refresh
            if (app.levelUrl && app.levelSourceId && app.id) {
              // load code by navigating to the current level with the project's level source (hack, see above TODO)
              window.location = window.location.origin + window.location.pathname + '?level_source_id=' + app.levelSourceId + '#' + app.id;
            }
          }
        } else {
          console.log('failed to fetch project for ' + appOptions.level.projectTemplateLevelName)
        }
      });
    }
  });

  $(document).bind('ajaxSuccess', function(event, response) {
    // if we have a project open, save it when receiving a milestone response from the server
    // TODO make this an explicit event instead of just listening for all ajaxSuccess
    if (response &&
        response.status == 200 &&
        response.responseJSON &&
        response.responseJSON.level_source_id &&
        currentApp &&
        currentApp.id ) {

      $('#save-project').text("Saving...");

      currentApp.levelSourceId = response.responseJSON.level_source_id;
      currentApp.levelId = appOptions.levelId; // TODO this is not actually a unique identifier for the level
      currentApp.levelUrl = window.location.origin + window.location.pathname; // TODO this is hacky.. we should just have a /project url
      currentApp.updatedAt = new Date;

      apps.update(
        currentApp.id,
        currentApp,
        function(success) {
          if (success) {
            $('#save-project').text("Saved " + currentApp.updatedAt);
          } else {
            $('#save-project').text("Failed to save.");
          }
        }
      );
    }
  });

   $('body').on('click', '#create-project', function() {
     createApp({});
    return false;
  });

  $('body').on('submit', '#project-form', function() {
      $('#save-project').text("Saving...");

      currentApp.name = $('#project-form input#name').val();
      currentApp.updatedAt = new Date;

      apps.update(
        currentApp.id,
        currentApp,
        function(success) {
          if (success) {
            $('#save-project').text("Saved " + new Date());
            $('#project-name').text(currentApp.name);
            $('#project-form input#name').val(currentApp.name);
          } else {
            $('#save-project').text("Saved " + new Date());
          }
        }
      );
      return false;
  });
