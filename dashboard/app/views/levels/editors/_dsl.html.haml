:scss
  $cyan: #0094ca;
  $light_cyan: #59b9dc;
  $lighter_cyan: #a6daed;
  $lightest_cyan: #d9eff7;

  .script_text textarea { width: 100%; height: 100px}
  .markdown {
    border: 5px solid gray;
    border-radius: 5px;
    padding: 10px;
  }

  .markdown.teacher {
    border: 5px solid $cyan;
    background-color: $lightest_cyan;
  }

- if @level.filename
  = "Filename: #{@level.filename}"
.field
  = f.label :encrypted, 'Encrypt this entire file'
  %p Use this if you want to prevent devious students from finding answers in our git repo
  = boolean_check_box f, :encrypted
.script_text
  = text_area_tag('level[dsl_text]', @level.dsl_text || (@level.dsl_default))

- if @level.is_a?(External)
  .field
    = f.label :icon_type, 'Icon'
    %p
      Override the icon that shows up for this level
      %div
        Default:
        %i.fa.fa-file-text
        Stop:
        %i.fa.fa-stop-circle
        Map:
        %i.fa.fa-map

    = f.select :icon_type, options_for_select(["Default", "Stop", "Map"], @level.icon_type)

- if [ContractMatch, Match, Multi, TextMatch, External].include? @level.class

  - content_for(:head) do
    %script{src: minifiable_asset_path('js/levelbuilder_markdown.js')}

  .markdown
    %p Edit Markdown:

    %textarea#level_markdown_textarea
    #level_markdown_textarea_preview

  .markdown.teacher
    %p Edit Teacher Only Markdown:

    %textarea#level_teacher_markdown_textarea
    #level_teacher_markdown_textarea_preview
