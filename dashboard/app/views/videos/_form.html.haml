= form_for(@video) do |f|
  - if @video.errors.any?
    #error_explanation
      %h2
        = pluralize(@video.errors.count, 'error')
        prohibited this video from being saved:
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :key
    %br/
    = f.text_field :key
  .field
    = f.label :youtube_code
    %br/
    = f.text_field :youtube_code
  .actions
    = f.submit
