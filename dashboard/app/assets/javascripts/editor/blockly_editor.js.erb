function codeMirror(name) {
    var editor = CodeMirror.fromTextArea(document.getElementById('level_' + name + '_blocks'), {
        mode: 'xml',
        htmlMode: false,
        viewportMargin: Infinity,
        matchTags: {bothTags: true},
        autoCloseTags: true
    });
}
