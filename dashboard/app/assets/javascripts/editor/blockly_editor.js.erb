function codeMirror(name, mode) {
    var editor = CodeMirror.fromTextArea(document.getElementById('level_' + name), {
        mode: mode,
        htmlMode: false,
        viewportMargin: Infinity,
        matchTags: {bothTags: true},
        autoCloseTags: true
    });
}
