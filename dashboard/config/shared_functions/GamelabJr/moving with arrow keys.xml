            </block>
          </statement>
          <next>
            <block type="controls_if">
              <value name="IF0">
                <block type="gamelab_isKeyPressed">
                  <field name="KEY">"left"</field>
                </block>
              </value>
              <statement name="DO0">
                <block type="gamelab_moveInDirection">
                  <field name="DIRECTION">"West"</field>
                  <value name="SPRITE">
                    <block type="sprite_parameter_get">
                      <field name="VAR">this sprite</field>
                    </block>
                  </value>
                  <value name="DISTANCE">
                    <block type="gamelab_getProp">
                      <field name="PROPERTY">"speed"</field>
                      <value name="SPRITE">
                        <block type="sprite_parameter_get">
                          <field name="VAR">this sprite</field>
                        </block>
                      </value>
                    </block>
                  </value>
                  <next>
                    <block type="gamelab_mirrorSprite">
                      <field name="DIRECTION">"left"</field>
                      <value name="SPRITE">
                        <block type="sprite_parameter_get">
                          <field name="VAR">this sprite</field>
                        </block>
                      </value>
                    </block>
                  </next>
                </block>
              </statement>
              <next>
                <block type="controls_if">
                  <value name="IF0">
                    <block type="gamelab_isKeyPressed">
                      <field name="KEY">"right"</field>
                    </block>
                  </value>
                  <statement name="DO0">
                    <block type="gamelab_moveInDirection">
                      <field name="DIRECTION">"East"</field>
                      <value name="SPRITE">
                        <block type="sprite_parameter_get">
                          <field name="VAR">this sprite</field>
                        </block>
                      </value>
                      <value name="DISTANCE">
                        <block type="gamelab_getProp">
                          <field name="PROPERTY">"speed"</field>
                          <value name="SPRITE">
                            <block type="sprite_parameter_get">
                              <field name="VAR">this sprite</field>
                            </block>
                          </value>
