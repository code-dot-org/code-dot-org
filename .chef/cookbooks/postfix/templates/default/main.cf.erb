# Generated by Chef for <%= node['fqdn'] %>
# Configured as <%= node['postfix']['mail_type'] %>
###

<% @settings.sort.map do |key, value| -%>
<%  next if value.nil? -%>
<%  if value.kind_of? Array -%>
<%=   "#{key} = #{value.join(', ')}"%>
<%  else -%>
<%=   "#{key} = #{value}"%>
<%  end -%>
<% end -%>
